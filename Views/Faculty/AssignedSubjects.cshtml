@model List<TutorLiveMentor.Models.AssignedSubject>

@{
    ViewData["Title"] = "Assigned Subjects";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Assigned Subjects - TutorLiveMentor</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        :root {
            --royal-blue: #274060;
            --warm-gold: #FFC857;
            --cream: #F9FAF2;
            --slate: #CED3DC;
            --card-shadow: rgba(39,64,96,0.13);
            --success-green: #28a745;
            --error-red: #dc3545;
            --faculty-purple: #6f42c1;
        }

        body {
            min-height: 100vh;
            margin: 0;
            padding: 20px 0;
            font-family: 'Montserrat', Arial, sans-serif;
            background: linear-gradient(rgba(249, 250, 242, 0.15), rgba(255, 200, 87, 0.10)),
            url('@Url.Content("~/images/RGMCET-BACKGROUND.jpg")') center center/cover no-repeat fixed;
            position: relative;
        }

        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 0;
            display: block;
            background: linear-gradient(135deg, var(--cream) 60%, var(--warm-gold) 100%);
            opacity: 0.20;
            pointer-events: none;
        }

        .main-container {
            position: relative;
            z-index: 1;
            max-width: 1000px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .nav-link {
            position: fixed;
            top: 20px;
            left: 20px;
            background: rgba(249,250,242,0.9);
            color: var(--royal-blue);
            padding: 10px 20px;
            border-radius: 25px;
            text-decoration: none;
            font-weight: 600;
            border: 2px solid var(--slate);
            backdrop-filter: blur(8px);
            transition: all 0.3s ease;
            z-index: 100;
        }

        .nav-link:hover {
            background: var(--warm-gold);
            color: var(--royal-blue);
            transform: translateY(-2px);
            text-decoration: none;
        }

        .dashboard-header {
            background: rgba(249,250,242,0.92);
            box-shadow: 0 8px 32px var(--card-shadow);
            border-radius: 20px;
            padding: 40px;
            text-align: center;
            backdrop-filter: blur(12px);
            margin-bottom: 40px;
            border: 2px solid var(--slate);
        }

        .dashboard-header h2 {
            font-size: 2.5em;
            font-weight: 700;
            color: var(--royal-blue);
            margin: 0;
            letter-spacing: 1.2px;
        }

        .subjects-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 25px;
            margin-bottom: 30px;
        }

        .subject-card {
            background: rgba(249,250,242,0.95);
            border-radius: 20px;
            padding: 30px;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .subject-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: linear-gradient(180deg, var(--faculty-purple), var(--warm-gold));
            transition: width 0.3s ease;
        }

        .subject-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 45px var(--card-shadow);
            border-color: var(--warm-gold);
        }

        .subject-card:hover::before {
            width: 8px;
        }

        .subject-header {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 20px;
        }

        .subject-icon {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, var(--faculty-purple), var(--warm-gold));
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.8em;
            color: white;
            box-shadow: 0 4px 15px var(--card-shadow);
        }

        .subject-info h3 {
            margin: 0 0 5px 0;
            font-size: 1.3em;
            font-weight: 700;
            color: var(--royal-blue);
        }

        .subject-year {
            color: #666;
            font-size: 1em;
            font-weight: 600;
        }

        .subject-details {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
            margin-top: 20px;
        }

        .detail-item {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 10px;
            background: rgba(255, 255, 255, 0.5);
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        .detail-item:hover {
            background: rgba(255, 255, 255, 0.8);
        }

        .detail-icon {
            font-size: 1.1em;
        }

        .detail-text {
            font-weight: 600;
            color: #333;
            font-size: 0.9em;
        }

        .no-subjects {
            background: rgba(249,250,242,0.95);
            border-radius: 20px;
            padding: 50px 40px;
            text-align: center;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
        }

        .no-subjects-icon {
            font-size: 4em;
            margin-bottom: 20px;
        }

        .no-subjects h3 {
            color: var(--royal-blue);
            font-size: 1.8em;
            font-weight: 700;
            margin-bottom: 15px;
        }

        .no-subjects p {
            color: #666;
            font-size: 1.1em;
            line-height: 1.6;
        }

        .subjects-summary {
            background: rgba(249,250,242,0.95);
            border-radius: 20px;
            padding: 25px;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
            margin-bottom: 30px;
            text-align: center;
        }

        .summary-text {
            font-size: 1.2em;
            font-weight: 600;
            color: var(--royal-blue);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        @@media (max-width: 768px) {
            .main-container {
                padding: 0 15px;
            }

            .dashboard-header {
                padding: 30px 20px;
            }

            .dashboard-header h2 {
                font-size: 2em;
            }

            .subjects-container {
                grid-template-columns: 1fr;
                gap: 20px;
            }

            .subject-details {
                grid-template-columns: 1fr;
            }

            .nav-link {
                position: static;
                display: inline-block;
                margin-bottom: 20px;
            }
        }
    </style>
</head>
<body>
    <a href="@Url.Action("MainDashboard", "Faculty")" class="nav-link"><i class="fas fa-home"></i> Back to Dashboard</a>
    
    <div class="main-container">
        <div class="dashboard-header">
            <h2><i class="fas fa-book"></i> Your Assigned Subjects</h2>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="subjects-summary">
                <div class="summary-text">
                    <i class="fas fa-info-circle"></i> You are currently assigned to teach <strong>@Model.Count</strong> subject(s)
                </div>
            </div>

            <div class="subjects-container">
                @foreach (var subject in Model)
                {
                    <div class="subject-card">
                        <div class="subject-header">
                            <div class="subject-icon">
                                <i class="fas fa-book-open"></i>
                            </div>
                            <div class="subject-info">
                                <h3>@subject.Subject.Name</h3>
                                <div class="subject-year">Year @subject.Year - @subject.Department</div>
                            </div>
                        </div>

                        <div class="subject-details">
                            <div class="detail-item">
                                <span class="detail-icon"><i class="fas fa-calendar-alt"></i></span>
                                <span class="detail-text">Year @subject.Year</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-icon"><i class="fas fa-building"></i></span>
                                <span class="detail-text">@subject.Department</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-icon"><i class="fas fa-users"></i></span>
                                <span class="detail-text">@subject.SelectedCount Students</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-icon"><i class="fas fa-id-badge"></i></span>
                                <span class="detail-text">ID: @subject.AssignedSubjectId</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="no-subjects">
                <div class="no-subjects-icon"><i class="fas fa-book"></i></div>
                <h3>No Subjects Assigned</h3>
                <p>You currently have no subjects assigned to you. Please contact the administration if you believe this is an error.</p>
            </div>
        }
    </div>
</body>
</html>
