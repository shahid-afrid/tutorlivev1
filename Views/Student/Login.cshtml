@model TutorLiveMentor.Models.LoginViewModel

@{
    ViewBag.Title = "Student Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Student Login - TutorLiveMentor</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700,400&display=swap" rel="stylesheet">
    <style>
        :root {
            --royal-blue: #274060;
            --warm-gold: #FFC857;
            --cream: #F9FAF2;
            --slate: #CED3DC;
            --card-shadow: rgba(39,64,96,0.13);
            --success-green: #28a745;
            --error-red: #dc3545;
        }

        body {
            min-height: 100vh;
            margin: 0;
            padding: 0;
            font-family: 'Montserrat', Arial, sans-serif;
            background: linear-gradient(rgba(249, 250, 242, 0.15), rgba(255, 200, 87, 0.10)),
            url('@Url.Content("~/images/RGMCET-BACKGROUND.jpg")') center center/cover no-repeat fixed;
            position: relative;
        }

        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 0;
            display: block;
            background: linear-gradient(135deg, var(--cream) 60%, var(--warm-gold) 100%);
            opacity: 0.20;
            pointer-events: none;
        }

        .glass-card {
            background: rgba(249,250,242,0.92);
            box-shadow: 0 16px 48px var(--card-shadow);
            border-radius: 26px;
            padding: 50px 40px 40px 40px;
            text-align: center;
            backdrop-filter: blur(12px);
            max-width: 420px;
            width: 90vw;
            margin: 120px auto 0 auto;
            position: relative;
            z-index: 1;
            border: 2px solid var(--slate);
        }

        .logo {
            width: 70px;
            height: 70px;
            margin-bottom: 20px;
            filter: drop-shadow(2px 6px 18px var(--royal-blue));
            object-fit: contain;
            background: var(--cream);
            border-radius: 12px;
            padding: 6px;
        }

        h2 {
            font-size: 1.9em;
            font-weight: 700;
            color: var(--royal-blue);
            margin-bottom: 30px;
            letter-spacing: 1px;
        }

        .success-message {
            background: rgba(40, 167, 69, 0.1);
            border: 1px solid var(--success-green);
            border-radius: 8px;
            padding: 12px;
            margin-bottom: 20px;
            color: var(--success-green);
            font-weight: 600;
        }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

        label {
            display: block;
            font-weight: 600;
            color: var(--royal-blue);
            margin-bottom: 8px;
            font-size: 0.95em;
        }

        input[type="email"], input[type="password"] {
            width: 100%;
            padding: 12px 16px;
            border: 2px solid var(--slate);
            border-radius: 12px;
            font-size: 1em;
            font-family: 'Montserrat', sans-serif;
            background: rgba(249,250,242,0.8);
            transition: border-color 0.3s, box-shadow 0.3s;
            box-sizing: border-box;
        }

        input[type="email"]:focus, input[type="password"]:focus {
            outline: none;
            border-color: var(--warm-gold);
            box-shadow: 0 0 0 3px rgba(255, 200, 87, 0.2);
        }

        .password-container {
            position: relative;
            display: flex;
            align-items: center;
        }

        .password-toggle {
            position: absolute;
            right: 12px;
            background: none;
            border: none;
            cursor: pointer;
            font-size: 18px;
            z-index: 2;
        }

        .glass-btn {
            width: 100%;
            background: linear-gradient(90deg, var(--royal-blue) 74%, var(--warm-gold) 100%);
            color: #fff;
            border: none;
            border-radius: 15px;
            padding: 16px 24px;
            font-size: 1.1em;
            font-weight: 600;
            cursor: pointer;
            box-shadow: 0 8px 24px var(--card-shadow);
            border: 2px solid var(--slate);
            transition: all 0.3s ease;
            margin-top: 20px;
        }

        .glass-btn:hover {
            box-shadow: 0 16px 32px var(--warm-gold);
            background: linear-gradient(90deg, var(--warm-gold) 62%, var(--royal-blue) 100%);
            color: var(--royal-blue);
            transform: translateY(-3px);
            border: 2px solid var(--royal-blue);
        }

        .validation-summary-errors {
            background: rgba(220, 53, 69, 0.1);
            border: 1px solid var(--error-red);
            border-radius: 8px;
            padding: 12px;
            margin-bottom: 20px;
            color: var(--error-red);
            text-align: left;
        }

        .field-validation-error {
            color: var(--error-red);
            font-size: 0.85em;
            margin-top: 5px;
            display: block;
        }

        .nav-link {
            position: absolute;
            top: 20px;
            left: 20px;
            background: rgba(249,250,242,0.9);
            color: var(--royal-blue);
            padding: 8px 16px;
            border-radius: 20px;
            text-decoration: none;
            font-weight: 600;
            border: 1px solid var(--slate);
            backdrop-filter: blur(8px);
            transition: all 0.3s ease;
        }

        .nav-link:hover {
            background: var(--warm-gold);
            color: var(--royal-blue);
            transform: translateY(-2px);
        }

        .register-link {
            margin-top: 20px;
            text-align: center;
        }

        .register-link a {
            color: var(--royal-blue);
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s;
        }

        .register-link a:hover {
            color: var(--warm-gold);
        }

        @@media (max-width: 768px) {
            .glass-card {
                margin: 60px auto 0 auto;
                padding: 40px 25px 30px 25px;
            }

            h2 {
                font-size: 1.6em;
            }

            .nav-link {
                position: static;
                margin-bottom: 20px;
                display: inline-block;
            }
        }
    </style>
</head>
<body>
    <a href="@Url.Action("Index", "Student")" class="nav-link">← Back to Student</a>
    
    <div class="glass-card">
        <img src="~/images/RGMCET.jpg" alt="RGMCET Logo" class="logo" />
        <h2>Student Login</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="success-message">
                @TempData["SuccessMessage"]
            </div>
        }

        @using (Html.BeginForm("Login", "Student", FormMethod.Post))
        {
            @Html.ValidationSummary(true)

            <div class="form-group">
                <label>Email Address</label>
                @Html.TextBoxFor(m => m.Email, new { @required = "required", type = "email" })
                @Html.ValidationMessageFor(m => m.Email)
            </div>

            <div class="form-group">
                <label>Password</label>
                <div class="password-container">
                    <input type="password" id="password" name="Password" required />
                    <button type="button" class="password-toggle" onclick="togglePassword()">
                        <span id="eye">👁️</span>
                    </button>
                </div>
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <button type="submit" class="glass-btn">🔐 Login</button>
        }

        <div class="register-link">
            <p>Don't have an account? <a href="@Url.Action("Register", "Student")">Register here</a></p>
        </div>
    </div>

    <script type="text/javascript">
        function togglePassword() {
            var pwd = document.getElementById("password");
            var eye = document.getElementById("eye");
            if (pwd.type === "password") {
                pwd.type = "text";
                eye.textContent = "🙈";
            } else {
                pwd.type = "password";
                eye.textContent = "👁️";
            }
        }
    </script>
</body>
</html>
