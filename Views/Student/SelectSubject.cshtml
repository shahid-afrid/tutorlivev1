@using TutorLiveMentor.Models
@using TutorLiveMentor.Controllers
@using Microsoft.AspNetCore.Mvc
@using System.Linq
@model TutorLiveMentor.Controllers.StudentDashboardViewModel

@{
    ViewData["Title"] = "Select Faculty";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Select Faculty - TutorLiveMentor</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <style>
        :root {
            --royal-blue: #274060;
            --warm-gold: #FFC857;
            --cream: #F9FAF2;
            --slate: #CED3DC;
            --card-shadow: rgba(39,64,96,0.13);
            --success-green: #28a745;
            --error-red: #dc3545;
            --warning-orange: #fd7e14;
        }

        body {
            min-height: 100vh;
            margin: 0;
            padding: 20px 0;
            font-family: 'Montserrat', Arial, sans-serif;
            background: linear-gradient(rgba(249, 250, 242, 0.15), rgba(255, 200, 87, 0.10)),
            url('@Url.Content("~/images/RGMCET-BACKGROUND.jpg")') center center/cover no-repeat fixed;
            position: relative;
        }

        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 0;
            display: block;
            background: linear-gradient(135deg, var(--cream) 60%, var(--warm-gold) 100%);
            opacity: 0.20;
            pointer-events: none;
        }

        .main-container {
            position: relative;
            z-index: 1;
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .nav-link {
            position: fixed;
            top: 20px;
            left: 20px;
            background: rgba(249,250,242,0.9);
            color: var(--royal-blue);
            padding: 10px 20px;
            border-radius: 25px;
            text-decoration: none;
            font-weight: 600;
            border: 2px solid var(--slate);
            backdrop-filter: blur(8px);
            transition: all 0.3s ease;
            z-index: 100;
        }

        .nav-link:hover {
            background: var(--warm-gold);
            color: var(--royal-blue);
            transform: translateY(-2px);
            text-decoration: none;
        }

        .dashboard-header {
            background: rgba(249,250,242,0.92);
            box-shadow: 0 8px 32px var(--card-shadow);
            border-radius: 20px;
            padding: 40px;
            text-align: center;
            backdrop-filter: blur(12px);
            margin-bottom: 40px;
            border: 2px solid var(--slate);
        }

        .dashboard-header h2 {
            font-size: 2.5em;
            font-weight: 700;
            color: var(--royal-blue);
            margin: 0 0 10px 0;
            letter-spacing: 1.2px;
        }

        .user-info {
            font-size: 1.1em;
            color: #666;
            font-weight: 500;
        }

        .user-info strong {
            color: var(--royal-blue);
        }

        /* Real-time Status */
        .connection-status {
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 8px 15px;
            border-radius: 15px;
            font-weight: 600;
            font-size: 0.9em;
            z-index: 100;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
            backdrop-filter: blur(8px);
        }

        .connection-status.connected {
            background: rgba(40, 167, 69, 0.9);
            color: white;
        }

        .connection-status.disconnected {
            background: rgba(220, 53, 69, 0.9);
            color: white;
        }

        .status-dot {
            width: 10px;
            height: 10px;
            border-radius: 50%;
            display: inline-block;
            animation: pulse-dot 2s infinite;
        }

        .status-dot.connected {
            background: #00ff00;
            box-shadow: 0 0 6px #00ff00;
        }

        .status-dot.disconnected {
            background: #ff0000;
            box-shadow: 0 0 6px #ff0000;
        }

        .status-dot.connecting {
            background: #ffaa00;
            box-shadow: 0 0 6px #ffaa00;
        }

        @@keyframes pulse-dot {
            0%, 100% { opacity: 1; transform: scale(1); }
            50% { opacity: 0.7; transform: scale(1.1); }
        }

        /* Alerts */
        .alert {
            padding: 18px 24px;
            margin-bottom: 30px;
            border: 3px solid transparent;
            border-radius: 15px;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 12px;
            font-size: 1.1em;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
            backdrop-filter: blur(10px);
            animation: slideDown 0.5s ease;
            position: relative;
            overflow: hidden;
        }

        .alert::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: inherit;
            z-index: -1;
        }

        .alert-success {
            color: #155724;
            background: linear-gradient(135deg, rgba(212, 237, 218, 0.98), rgba(195, 230, 203, 0.98));
            border-color: var(--success-green);
            box-shadow: 0 8px 25px rgba(40, 167, 69, 0.3);
        }

        .alert-success i {
            font-size: 1.5em;
            color: var(--success-green);
            animation: bounceIn 0.6s ease;
        }

        .alert-danger {
            color: #721c24;
            background: linear-gradient(135deg, rgba(248, 215, 218, 0.98), rgba(242, 200, 203, 0.98));
            border-color: var(--error-red);
            box-shadow: 0 8px 25px rgba(220, 53, 69, 0.3);
        }

        .alert-danger i {
            font-size: 1.5em;
            color: var(--error-red);
            animation: bounceIn 0.6s ease;
        }

        @@keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes bounceIn {
            0% {
                transform: scale(0);
                opacity: 0;
            }
            50% {
                transform: scale(1.2);
            }
            100% {
                transform: scale(1);
                opacity: 1;
            }
        }

        /* Subject Cards Grid - 3 columns */
        .subjects-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 25px;
            margin-bottom: 40px;
        }

        .subject-card {
            background: rgba(249,250,242,0.95);
            border-radius: 18px;
            padding: 20px;
            backdrop-filter: blur(12px);
            border: 3px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
            transition: all 0.3s ease;
        }

        .subject-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 45px var(--card-shadow);
            border-color: var(--warm-gold);
        }

        .subject-header {
            text-align: center;
            margin-bottom: 18px;
            padding-bottom: 15px;
            border-bottom: 2px solid var(--slate);
        }

        .subject-icon {
            font-size: 2.5em;
            color: var(--royal-blue);
            margin-bottom: 10px;
        }

        .subject-name {
            font-size: 1.4em;
            font-weight: 700;
            color: var(--royal-blue);
            margin: 0;
            letter-spacing: 0.5px;
        }

        /* Faculty List inside Subject Card */
        .faculty-list {
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        .faculty-item {
            background: rgba(255, 255, 255, 0.7);
            border: 2px solid var(--slate);
            border-radius: 10px;
            padding: 12px 15px;
            transition: all 0.3s ease;
            position: relative;
        }

        .faculty-item:hover {
            background: rgba(255, 255, 255, 0.9);
            border-color: var(--warm-gold);
            transform: translateX(3px);
        }

        .faculty-item.full {
            opacity: 0.65;
            border-color: var(--error-red);
            background: rgba(220, 53, 69, 0.05);
        }

        .faculty-name {
            font-size: 1em;
            font-weight: 600;
            color: var(--royal-blue);
            display: flex;
            align-items: center;
            gap: 6px;
        }

        .faculty-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 12px;
        }

        .faculty-info-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 10px;
        }

        .enroll-btn {
            background: linear-gradient(135deg, var(--success-green), var(--warm-gold));
            color: white;
            border: none;
            border-radius: 6px;
            padding: 6px 16px;
            font-size: 0.85em;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 5px;
            white-space: nowrap;
        }

        .enroll-btn:hover:not(:disabled) {
            background: linear-gradient(135deg, var(--warm-gold), var(--success-green));
            transform: scale(1.05);
            box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
        }

        .enroll-btn:disabled {
            background: var(--error-red);
            cursor: not-allowed;
            opacity: 0.7;
        }

        .enrollment-count {
            font-size: 0.9em;
            font-weight: 600;
            color: var(--royal-blue);
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .enrollment-count.warning {
            color: var(--warning-orange);
        }

        .enrollment-count.full {
            color: var(--error-red);
        }

        .count-badge {
            background: var(--royal-blue);
            color: white;
            padding: 4px 10px;
            border-radius: 10px;
            font-size: 0.85em;
            font-weight: 700;
        }

        .count-badge.warning {
            background: var(--warning-orange);
        }

        .count-badge.full {
            background: var(--error-red);
        }

        /* No Subjects State */
        .no-subjects {
            background: rgba(249,250,242,0.95);
            border-radius: 20px;
            padding: 60px 40px;
            text-align: center;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
        }

        .no-subjects-icon {
            font-size: 5em;
            color: var(--royal-blue);
            margin-bottom: 20px;
        }

        .no-subjects h3 {
            color: var(--royal-blue);
            font-size: 2em;
            font-weight: 700;
            margin-bottom: 15px;
        }

        .no-subjects p {
            color: #666;
            font-size: 1.1em;
            line-height: 1.6;
            max-width: 600px;
            margin: 0 auto;
        }

        /* Real-time Notifications */
        .notification-container {
            position: fixed;
            top: 80px;
            right: 20px;
            width: 350px;
            max-height: 400px;
            overflow-y: auto;
            z-index: 1000;
        }

        .notification {
            background: rgba(249,250,242,0.95);
            border: 2px solid var(--slate);
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 10px;
            box-shadow: 0 4px 15px var(--card-shadow);
            backdrop-filter: blur(8px);
            animation: slideIn 0.3s ease;
        }

        .notification.success { border-color: var(--success-green); }
        .notification.warning { border-color: var(--warning-orange); }
        .notification.error { border-color: var(--error-red); }

        .notification .close-btn {
            float: right;
            cursor: pointer;
            color: #999;
            font-weight: bold;
        }

        @@keyframes slideIn {
            from { transform: translateX(100%); opacity: 0; }
            to { transform: translateX(0); opacity: 1; }
        }

        /* Responsive Design */
        @@media (max-width: 1200px) {
            .subjects-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @@media (max-width: 768px) {
            .main-container {
                padding: 0 15px;
            }

            .dashboard-header {
                padding: 30px 20px;
            }

            .dashboard-header h2 {
                font-size: 2em;
            }

            .subjects-grid {
                grid-template-columns: 1fr;
                gap: 20px;
            }

            .subject-card {
                padding: 20px;
            }

            .nav-link {
                position: static;
                display: inline-block;
                margin-bottom: 20px;
            }

            .connection-status {
                position: relative;
                top: 0;
                right: 0;
                margin-bottom: 15px;
                justify-content: center;
            }

            .notification-container {
                position: relative;
                top: 0;
                right: 0;
                width: 100%;
                margin-bottom: 20px;
            }
        }
    </style>
</head>
<body>
    <a href="@Url.Action("MainDashboard", "Student")" class="nav-link"><i class="fas fa-home"></i> Back to Dashboard</a>
    
    <!-- Real-time Connection Status -->
    <div class="connection-status disconnected" id="connectionStatus">
        <span class="status-dot connecting"></span> Connecting...
    </div>

    <!-- Real-time Notifications -->
    <div class="notification-container" id="notificationContainer"></div>

    <div class="main-container">
        <div class="dashboard-header">
            <h2><i class="fas fa-chalkboard-teacher"></i> Select Faculty</h2>
            <div class="user-info">
                <strong>@Model.Student.FullName</strong> | 
                Year: <strong>@Model.Student.Year</strong> | 
                Department: <strong>@Model.Student.Department</strong>
            </div>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
            </div>
        }

        @if (Model.AvailableSubjectsGrouped.Any())
        {
            <div class="subjects-grid">
                @foreach (var subjectGroup in Model.AvailableSubjectsGrouped)
                {
                    <div class="subject-card">
                        <!-- Subject Header -->
                        <div class="subject-header">
                            <div class="subject-icon">
                                <i class="fas fa-book"></i>
                            </div>
                            <h3 class="subject-name">@subjectGroup.Key</h3>
                        </div>

                        <!-- Faculty List for this Subject -->
                        <div class="faculty-list">
                            @foreach (var assignedSubject in subjectGroup)
                            {
                                var isFull = assignedSubject.SelectedCount >= 70;
                                var isWarning = assignedSubject.SelectedCount >= 60;

                                <div class="faculty-item @(isFull ? "full" : "")" data-assigned-subject-id="@assignedSubject.AssignedSubjectId">
                                    <div class="faculty-info-row">
                                        <div class="faculty-name">
                                            <i class="fas fa-user-tie"></i>
                                            @assignedSubject.Faculty.Name
                                        </div>

                                        <div class="faculty-actions">
                                            <form asp-action="SelectSubject" method="post" style="display: inline;">
                                                <input type="hidden" name="assignedSubjectId" value="@assignedSubject.AssignedSubjectId" />
                                                <button type="submit" class="enroll-btn" @(isFull ? "disabled" : "")>
                                                    @if (isFull)
                                                    {
                                                        <i class="fas fa-times"></i>
                                                        <span>FULL</span>
                                                    }
                                                    else
                                                    {
                                                        <i class="fas fa-check"></i>
                                                        <span>ENROLL</span>
                                                    }
                                                </button>
                                            </form>

                                            <span class="count-badge @(isFull ? "full" : isWarning ? "warning" : "")" data-count="@assignedSubject.SelectedCount">
                                                <span class="count-value">@assignedSubject.SelectedCount</span>/70
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="no-subjects">
                <div class="no-subjects-icon"><i class="fas fa-graduation-cap"></i></div>
                <h3>No Available Subjects</h3>
                <p>All subjects for your year are currently full, or you have already enrolled in all available subjects.</p>
                <p style="margin-top: 10px;">Please check back later or contact administration for assistance.</p>
            </div>
        }
    </div>

    <script>
        // SIGNALR REAL-TIME CONNECTION
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/selectionHub")
            .withAutomaticReconnect()
            .configureLogging(signalR.LogLevel.Information)
            .build();

        const statusElement = document.getElementById('connectionStatus');
        
        connection.start().then(function () {
            console.log('? SignalR Connected!');
            statusElement.innerHTML = '<span class="status-dot connected"></span> Live Updates Active';
            statusElement.className = 'connection-status connected';
            
            const studentYear = '@Model.Student.Year';
            const studentDept = '@Model.Student.Department';
            
            @foreach (var subjectGroup in Model.AvailableSubjectsGrouped)
            {
                <text>
                connection.invoke('JoinSubjectGroup', '@subjectGroup.Key', getYearNumber(studentYear), studentDept)
                    .then(() => console.log('? Joined subject group: @subjectGroup.Key'))
                    .catch(err => console.error('? Failed to join subject group @subjectGroup.Key:', err));
                </text>
            }
            
        }).catch(function (err) {
            console.error('? SignalR Connection Error:', err);
            statusElement.innerHTML = '<span class="status-dot disconnected"></span> Offline Mode';
            statusElement.className = 'connection-status disconnected';
        });

        connection.onreconnecting(() => {
            console.warn('?? SignalR reconnecting...');
            statusElement.innerHTML = '<span class="status-dot connecting"></span> Reconnecting...';
            statusElement.className = 'connection-status disconnected';
        });

        connection.onreconnected(() => {
            console.log('? SignalR reconnected!');
            statusElement.innerHTML = '<span class="status-dot connected"></span> Live Updates Active';
            statusElement.className = 'connection-status connected';
            showNotification('Connection restored! Live updates active.', 'success');
        });

        connection.onclose((error) => {
            console.error('? SignalR connection closed:', error);
            statusElement.innerHTML = '<span class="status-dot disconnected"></span> Connection Lost';
            statusElement.className = 'connection-status disconnected';
        });

        // REAL-TIME EVENT HANDLERS
        connection.on("SubjectSelectionUpdated", function (data) {
            console.log('?? Selection Update Received:', data);
            console.log(`  - AssignedSubjectId: ${data.assignedSubjectId || data.AssignedSubjectId}`);
            console.log(`  - NewCount: ${data.newCount || data.NewCount}`);
            console.log(`  - IsFull: ${data.isFull || data.IsFull}`);
            console.log(`  - Student: ${data.studentName || data.StudentName}`);
            console.log(`  - Faculty: ${data.facultyName || data.FacultyName}`);
            
            // Handle both camelCase and PascalCase property names
            const assignedSubjectId = data.assignedSubjectId || data.AssignedSubjectId;
            const newCount = data.newCount || data.NewCount;
            const isFull = data.isFull || data.IsFull;
            const studentName = data.studentName || data.StudentName;
            const facultyName = data.facultyName || data.FacultyName;
            
            updateFacultyItem(assignedSubjectId, newCount, isFull);
            showNotification(
                `${studentName} enrolled with ${facultyName} (${newCount}/70)`,
                isFull ? 'warning' : 'success'
            );
        });

        connection.on("SubjectUnenrollmentUpdated", function (data) {
            console.log('?? Unenrollment Update Received:', data);
            console.log(`  - AssignedSubjectId: ${data.assignedSubjectId || data.AssignedSubjectId}`);
            console.log(`  - NewCount: ${data.newCount || data.NewCount}`);
            console.log(`  - Student: ${data.studentName || data.StudentName}`);
            console.log(`  - Faculty: ${data.facultyName || data.FacultyName}`);
            
            // Handle both camelCase and PascalCase property names
            const assignedSubjectId = data.assignedSubjectId || data.AssignedSubjectId;
            const newCount = data.newCount || data.NewCount;
            const studentName = data.studentName || data.StudentName;
            const facultyName = data.facultyName || data.FacultyName;
            
            updateFacultyItem(assignedSubjectId, newCount, false);
            showNotification(
                `${studentName} unenrolled from ${facultyName} (${newCount}/70)`,
                'success'
            );
        });

        connection.on("SubjectAvailabilityChanged", function (data) {
            console.log('?? Availability Change:', data);
            showNotification(`${data.SubjectName} - ${data.Message}`, data.IsAvailable ? 'success' : 'warning');
        });

        // UPDATE FACULTY ITEM WITH ENHANCED LOGGING
        function updateFacultyItem(assignedSubjectId, newCount, isFull) {
            console.log(`?? Updating faculty item: ID=${assignedSubjectId}, Count=${newCount}, Full=${isFull}`);
            
            // Find the faculty item by data attribute
            const item = document.querySelector(`[data-assigned-subject-id="${assignedSubjectId}"]`);
            if (!item) {
                console.warn(`?? Faculty item not found for ID: ${assignedSubjectId}`);
                console.log('Available items:', document.querySelectorAll('[data-assigned-subject-id]'));
                return;
            }

            console.log(`? Found faculty item for ID: ${assignedSubjectId}`, item);

            // Find the count value element - it's inside the count-badge
            const countBadge = item.querySelector('.count-badge');
            const countValue = item.querySelector('.count-value');
            const enrollBtn = item.querySelector('.enroll-btn');

            console.log('Elements found:', { 
                countBadge: !!countBadge, 
                countValue: !!countValue, 
                enrollBtn: !!enrollBtn 
            });

            // Update count with animation
            if (countValue && countBadge) {
                const oldCount = parseInt(countValue.textContent) || 0;
                countValue.textContent = newCount;
                console.log(`  ?? Updated count from ${oldCount} to ${newCount}`);
                
                // Add pulse animation with color change
                countBadge.style.transform = 'scale(1.3)';
                countBadge.style.transition = 'transform 0.3s ease, background-color 0.3s ease';
                
                // Update badge styling based on count
                countBadge.classList.remove('full', 'warning');
                if (isFull) {
                    countBadge.classList.add('full');
                    console.log(`  ?? Badge marked as FULL`);
                } else if (newCount >= 60) {
                    countBadge.classList.add('warning');
                    console.log(`  ?? Badge marked as WARNING`);
                } else {
                    console.log(`  ?? Badge marked as NORMAL`);
                }
                
                setTimeout(() => {
                    countBadge.style.transform = 'scale(1)';
                }, 300);
            } else {
                console.warn(`  ?? Count elements not found. countValue: ${!!countValue}, countBadge: ${!!countBadge}`);
            }

            // Update button
            if (enrollBtn) {
                if (isFull) {
                    enrollBtn.disabled = true;
                    enrollBtn.innerHTML = '<i class="fas fa-times"></i> <span>FULL</span>';
                    console.log(`  ?? Button disabled (FULL)`);
                } else {
                    enrollBtn.disabled = false;
                    enrollBtn.innerHTML = '<i class="fas fa-check"></i> <span>ENROLL</span>';
                    console.log(`  ?? Button enabled`);
                }
            } else {
                console.warn(`  ?? Enroll button not found`);
            }

            // Update item styling
            if (isFull) {
                item.classList.add('full');
                console.log(`  ?? Item marked as full`);
            } else {
                item.classList.remove('full');
                console.log(`  ?? Item marked as available`);
            }
            
            console.log(`? Faculty item update complete for ID: ${assignedSubjectId}`);
        }

        function showNotification(message, type = 'info') {
            const container = document.getElementById('notificationContainer');
            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            
            const icon = type === 'success' ? 'check-circle' : 
                        type === 'warning' ? 'exclamation-triangle' : 
                        type === 'error' ? 'times-circle' : 'info-circle';

            notification.innerHTML = `
                <span class="close-btn" onclick="this.parentElement.remove()">&times;</span>
                <i class="fas fa-${icon}"></i> ${message}
                <br><small>${new Date().toLocaleTimeString()}</small>
            `;

            container.appendChild(notification);

            setTimeout(() => {
                if (notification.parentElement) {
                    notification.remove();
                }
            }, 5000);

            while (container.children.length > 5) {
                container.removeChild(container.firstChild);
            }
        }

        function getYearNumber(yearString) {
            const yearMap = { "I Year": 1, "II Year": 2, "III Year": 3, "IV Year": 4 };
            return yearMap[yearString] || 1;
        }

        window.addEventListener('beforeunload', function() {
            if (connection.state === signalR.HubConnectionState.Connected) {
                connection.stop();
            }
        });

        document.addEventListener('DOMContentLoaded', function() {
            console.log('?? Page loaded, initializing SignalR...');
            setTimeout(() => {
                if (connection.state === signalR.HubConnectionState.Connected) {
                    showNotification('Live enrollment updates are now active!', 'success');
                    console.log('? SignalR ready for real-time updates');
                }
            }, 2000);
        });
    </script>
