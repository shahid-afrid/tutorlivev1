@{
    ViewData["Title"] = "Student Main Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Student Dashboard - TutorLiveMentor</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        :root {
            --royal-blue: #274060;
            --warm-gold: #FFC857;
            --cream: #F9FAF2;
            --slate: #CED3DC;
            --card-shadow: rgba(39,64,96,0.13);
            --success-green: #28a745;
            --error-red: #dc3545;
        }

        body {
            min-height: 100vh;
            margin: 0;
            padding: 20px 0;
            font-family: 'Montserrat', Arial, sans-serif;
            background: linear-gradient(rgba(249, 250, 242, 0.15), rgba(255, 200, 87, 0.10)),
            url('@Url.Content("~/images/RGMCET-BACKGROUND.jpg")') center center/cover no-repeat fixed;
            position: relative;
        }

        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 0;
            display: block;
            background: linear-gradient(135deg, var(--cream) 60%, var(--warm-gold) 100%);
            opacity: 0.20;
            pointer-events: none;
        }

        .main-container {
            position: relative;
            z-index: 1;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .dashboard-header {
            background: rgba(249,250,242,0.92);
            box-shadow: 0 8px 32px var(--card-shadow);
            border-radius: 20px;
            padding: 40px;
            text-align: center;
            backdrop-filter: blur(12px);
            margin-bottom: 40px;
            border: 2px solid var(--slate);
        }

        .dashboard-header h2 {
            font-size: 2.5em;
            font-weight: 700;
            color: var(--royal-blue);
            margin: 0;
            letter-spacing: 1.2px;
        }

        /* Schedule Status Alert */
        .schedule-status-alert {
            background: rgba(249,250,242,0.95);
            border-radius: 15px;
            padding: 20px 25px;
            margin-bottom: 30px;
            backdrop-filter: blur(12px);
            box-shadow: 0 6px 20px var(--card-shadow);
            display: flex;
            align-items: center;
            gap: 15px;
            border: 3px solid;
            animation: slideDown 0.5s ease;
        }

        .schedule-status-alert.available {
            background: linear-gradient(135deg, rgba(212, 237, 218, 0.98), rgba(195, 230, 203, 0.98));
            border-color: var(--success-green);
            color: #155724;
        }

        .schedule-status-alert.unavailable {
            background: linear-gradient(135deg, rgba(248, 215, 218, 0.98), rgba(242, 200, 203, 0.98));
            border-color: var(--error-red);
            color: #721c24;
        }

        .schedule-status-alert .status-icon {
            font-size: 2em;
            flex-shrink: 0;
        }

        .schedule-status-alert .status-content {
            flex-grow: 1;
        }

        .schedule-status-alert .status-title {
            font-weight: 700;
            font-size: 1.2em;
            margin-bottom: 5px;
        }

        .schedule-status-alert .status-description {
            font-size: 0.95em;
            margin: 0;
            opacity: 0.9;
        }

        @@keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .cards-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 30px;
            padding: 20px 0;
        }

        .dashboard-card {
            background: rgba(249,250,242,0.95);
            border-radius: 20px;
            padding: 35px 25px;
            text-align: center;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            transform: scale(1);
            position: relative;
            overflow: hidden;
        }

        .dashboard-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, var(--warm-gold) 0%, var(--royal-blue) 100%);
            opacity: 0;
            transition: opacity 0.4s ease;
            z-index: -1;
        }

        .dashboard-card:hover {
            transform: scale(0.95) translateY(-8px);
            box-shadow: 0 20px 60px rgba(39,64,96,0.25);
            border-color: var(--warm-gold);
        }

        .dashboard-card:hover::before {
            opacity: 0.08;
        }

        .dashboard-card:hover .card-icon {
            transform: scale(1.1) rotate(5deg);
            filter: drop-shadow(0 8px 16px var(--royal-blue));
        }

        .dashboard-card:hover .card-title {
            color: var(--royal-blue);
            transform: translateY(-2px);
        }

        .dashboard-card:hover .glass-btn {
            background: linear-gradient(90deg, var(--warm-gold) 0%, var(--royal-blue) 100%);
            color: white;
            transform: translateY(-3px) scale(1.05);
            box-shadow: 0 12px 30px rgba(255, 200, 87, 0.4);
        }

        /* Disabled card state */
        .dashboard-card.disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        .dashboard-card.disabled:hover {
            transform: scale(1);
            box-shadow: 0 8px 32px var(--card-shadow);
        }

        .dashboard-card.disabled .glass-btn {
            background: #ccc;
            cursor: not-allowed;
            pointer-events: none;
        }

        .card-icon {
            font-size: 4em;
            margin-bottom: 20px;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            filter: drop-shadow(2px 4px 8px var(--card-shadow));
        }

        .card-title {
            font-size: 1.4em;
            font-weight: 700;
            color: var(--royal-blue);
            margin-bottom: 15px;
            transition: all 0.3s ease;
        }

        .card-text {
            color: #666;
            font-size: 1em;
            margin-bottom: 25px;
            line-height: 1.5;
        }

        .glass-btn {
            background: linear-gradient(90deg, var(--royal-blue) 0%, var(--warm-gold) 100%);
            color: white;
            border: none;
            border-radius: 12px;
            padding: 12px 24px;
            font-size: 1em;
            font-weight: 600;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            box-shadow: 0 6px 20px var(--card-shadow);
            border: 2px solid transparent;
            transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }

        .glass-btn:hover {
            text-decoration: none;
            color: white;
        }

        .nav-link {
            position: fixed;
            top: 20px;
            left: 20px;
            background: rgba(249,250,242,0.9);
            color: var(--royal-blue);
            padding: 10px 20px;
            border-radius: 25px;
            text-decoration: none;
            font-weight: 600;
            border: 2px solid var(--slate);
            backdrop-filter: blur(8px);
            transition: all 0.3s ease;
            z-index: 100;
        }

        .nav-link:hover {
            background: var(--warm-gold);
            color: var(--royal-blue);
            transform: translateY(-2px);
            text-decoration: none;
        }

        /* Logout button styles */
        .logout-btn {
            position: fixed;
            top: 20px;
            right: 20px;
            background: linear-gradient(135deg, var(--error-red), #a71d2a);
            color: white;
            padding: 10px 20px;
            border-radius: 25px;
            text-decoration: none;
            font-weight: 600;
            border: 2px solid #a71d2a;
            backdrop-filter: blur(8px);
            transition: all 0.3s ease;
            z-index: 100;
            box-shadow: 0 4px 12px rgba(220, 53, 69, 0.3);
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .logout-btn:hover {
            background: linear-gradient(135deg, #c82333, var(--error-red));
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(220, 53, 69, 0.4);
            text-decoration: none;
            color: white;
        }

        .logout-btn i {
            font-size: 1.1em;
        }

        /* Adjust nav-link for logout button */
        .nav-link {
            position: fixed;
            top: 20px;
            left: 20px;
        }

        @@media (max-width: 768px) {
            .main-container {
                padding: 0 15px;
            }

            .dashboard-header {
                padding: 30px 20px;
                margin-bottom: 30px;
            }

            .dashboard-header h2 {
                font-size: 2em;
            }

            .schedule-status-alert {
                flex-direction: column;
                text-align: center;
            }

            .cards-container {
                grid-template-columns: 1fr;
                gap: 20px;
            }

            .dashboard-card {
                padding: 25px 20px;
            }

            .card-icon {
                font-size: 3em;
            }

            .nav-link {
                position: static;
                display: inline-block;
                margin-bottom: 20px;
            }

            .logout-btn {
                position: static;
                display: inline-flex;
                margin-bottom: 10px;
                margin-left: 10px;
            }

            .mobile-nav {
                display: flex;
                gap: 10px;
                flex-wrap: wrap;
                margin-bottom: 20px;
            }
        }
    </style>
</head>
<body>
    <div class="mobile-nav" style="padding: 20px;">
        <a href="@Url.Action("Index", "Home")" class="nav-link"><i class="fas fa-home"></i> Home</a>
        <a href="@Url.Action("Logout", "Student")" class="logout-btn" 
           onclick="return confirm('Are you sure you want to logout?')">
            <i class="fas fa-sign-out-alt"></i> Logout
        </a>
    </div>
    
    <div class="main-container">
        <div class="dashboard-header">
            <h2>Welcome, @ViewBag.StudentName!</h2>
            <p style="color: #666; margin-top: 10px; font-size: 0.9em;">
                <i class="fas fa-id-card"></i> @ViewBag.StudentRegdNumber 
                <span style="margin: 0 8px;">•</span>
                <i class="fas fa-graduation-cap"></i> @ViewBag.StudentYear 
                <span style="margin: 0 8px;">•</span>
                <i class="fas fa-building"></i> @ViewBag.StudentDepartment
            </p>
        </div>

        @* Faculty Selection Schedule Status *@
        @if (ViewBag.IsSelectionAvailable != null)
        {
            @if ((bool)ViewBag.IsSelectionAvailable)
            {
                <div class="schedule-status-alert available">
                    <i class="fas fa-check-circle status-icon"></i>
                    <div class="status-content">
                        <div class="status-title">✅ Faculty Selection Available</div>
                        <p class="status-description">@ViewBag.ScheduleStatus</p>
                    </div>
                </div>
            }
            else
            {
                <div class="schedule-status-alert unavailable">
                    <i class="fas fa-times-circle status-icon"></i>
                    <div class="status-content">
                        <div class="status-title">❌ Faculty Selection Closed</div>
                        <p class="status-description">@ViewBag.ScheduleMessage</p>
                    </div>
                </div>
            }
        }

        <div class="cards-container">
            <div class="dashboard-card">
                <div class="card-icon"><i class="fas fa-user"></i></div>
                <h5 class="card-title">Student Dashboard</h5>
                <p class="card-text">View your profile and personal details.</p>
                <a asp-controller="Student" asp-action="Dashboard" class="glass-btn">View Profile</a>
            </div>

            <div class="dashboard-card @((ViewBag.IsSelectionAvailable != null && !(bool)ViewBag.IsSelectionAvailable) ? "disabled" : "")">
                <div class="card-icon"><i class="fas fa-graduation-cap"></i></div>
                <h5 class="card-title">Select Subject</h5>
                <p class="card-text">Choose subjects and faculty for the semester.</p>
                @if (ViewBag.IsSelectionAvailable != null && (bool)ViewBag.IsSelectionAvailable)
                {
                    <a asp-controller="Student" asp-action="SelectSubject" class="glass-btn">Select Now</a>
                }
                else
                {
                    <button class="glass-btn" disabled>Currently Unavailable</button>
                }
            </div>

            <div class="dashboard-card">
                <div class="card-icon"><i class="fas fa-book"></i></div>
                <h5 class="card-title">My Selected Subjects</h5>
                <p class="card-text">View all subjects you have enrolled in.</p>
                <a asp-controller="Student" asp-action="MySelectedSubjects" class="glass-btn">View Subjects</a>
            </div>
        </div>
    </div>
</body>
</html>
