@{
    ViewData["Title"] = "Student Main Dashboard";
}

<style>
    .dashboard-card {
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 20px;
        margin: 15px;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        background-color: white;
    }

    .dashboard-card:hover {
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
    }

    .card-icon {
        font-size: 48px; /* Using a generic size */
        margin-bottom: 15px;
    }
</style>

<div class="text-center">
    <h2 class="display-5">Welcome, Student!</h2>
</div>

<div class="container mt-4">
    <div class="row justify-content-center">
        
        <div class="col-md-3">
            <div class="dashboard-card text-center">
                <div class="card-icon">👤</div>
                <h5 class="card-title">Student Dashboard</h5>
                <p class="card-text">View your profile and enrollment status.</p>
                <a asp-controller="Student" asp-action="Dashboard" class="btn btn-primary stretched-link">View Profile</a>
            </div>
        </div>

        <div class="col-md-3">
            <div class="dashboard-card text-center">
                <div class="card-icon">🎓</div>
                <h5 class="card-title">Select Subject</h5>
                <p class="card-text">Choose a subject and faculty for the semester.</p>
                <a asp-controller="Student" asp-action="Dashboard" class="btn btn-primary stretched-link">Select Now</a>
            </div>
        </div>

        <div class="col-md-3">
            <div class="dashboard-card text-center">
                <div class="card-icon">👩‍🏫</div>
                <h5 class="card-title">Assigned Faculty</h5>
                <p class="card-text">See details about your assigned faculty.</p>
                <a asp-controller="Student" asp-action="Dashboard" class="btn btn-primary stretched-link">View Details</a>
            </div>
        </div>

    </div>
</div>
