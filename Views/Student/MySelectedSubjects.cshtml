@model TutorLiveMentor.Models.Student

@{
    ViewData["Title"] = "My Selected Subjects";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Selected Subjects - TutorLiveMentor</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        :root {
            --royal-blue: #274060;
            --warm-gold: #FFC857;
            --cream: #F9FAF2;
            --slate: #CED3DC;
            --card-shadow: rgba(39,64,96,0.13);
            --success-green: #28a745;
            --error-red: #dc3545;
            --student-teal: #20c997;
        }

        body {
            min-height: 100vh;
            margin: 0;
            padding: 20px 0;
            font-family: 'Montserrat', Arial, sans-serif;
            background: linear-gradient(rgba(249, 250, 242, 0.15), rgba(255, 200, 87, 0.10)),
            url('@Url.Content("~/images/RGMCET-BACKGROUND.jpg")') center center/cover no-repeat fixed;
            position: relative;
        }

        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 0;
            display: block;
            background: linear-gradient(135deg, var(--cream) 60%, var(--warm-gold) 100%);
            opacity: 0.20;
            pointer-events: none;
        }

        .main-container {
            position: relative;
            z-index: 1;
            max-width: 1000px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .nav-link {
            position: fixed;
            top: 20px;
            left: 20px;
            background: rgba(249,250,242,0.95);
            color: var(--royal-blue);
            padding: 12px 24px;
            border-radius: 25px;
            text-decoration: none;
            font-weight: 600;
            border: 2px solid var(--slate);
            backdrop-filter: blur(8px);
            transition: all 0.3s ease;
            z-index: 1000;
            box-shadow: 0 4px 15px var(--card-shadow);
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .nav-link:hover {
            background: var(--warm-gold);
            color: var(--royal-blue);
            transform: translateY(-2px);
            text-decoration: none;
            box-shadow: 0 6px 20px rgba(255, 200, 87, 0.4);
        }

        .dashboard-header {
            background: rgba(249,250,242,0.92);
            box-shadow: 0 8px 32px var(--card-shadow);
            border-radius: 20px;
            padding: 40px;
            text-align: center;
            backdrop-filter: blur(12px);
            margin-bottom: 40px;
            border: 2px solid var(--slate);
        }

        .dashboard-header h2 {
            font-size: 2.5em;
            font-weight: 700;
            color: var(--royal-blue);
            margin: 0 0 15px 0;
            letter-spacing: 1.2px;
        }

        .student-info {
            font-size: 1.1em;
            color: #666;
            font-weight: 500;
        }

        .student-info strong {
            color: var(--royal-blue);
        }

        .subjects-container {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 25px;
            margin-bottom: 30px;
        }

        .subject-card {
            background: rgba(249,250,242,0.95);
            border-radius: 20px;
            padding: 30px;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .subject-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: linear-gradient(180deg, var(--student-teal), var(--warm-gold));
            transition: width 0.3s ease;
        }

        .subject-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 45px var(--card-shadow);
            border-color: var(--warm-gold);
        }

        .subject-card:hover::before {
            width: 8px;
        }

        .subject-header {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 20px;
        }

        .subject-icon {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, var(--student-teal), var(--warm-gold));
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.8em;
            line-height: 1;
            box-shadow: 0 4px 15px var(--card-shadow);
            flex-shrink: 0;
            color: white;
        }

        .subject-info h3 {
            margin: 0 0 5px 0;
            font-size: 1.3em;
            font-weight: 700;
            color: var(--royal-blue);
        }

        .subject-year {
            color: #666;
            font-size: 1em;
            font-weight: 600;
        }

        .subject-details {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
            margin-top: 20px;
        }

        .detail-item {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 10px;
            background: rgba(255, 255, 255, 0.5);
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        .detail-item:hover {
            background: rgba(255, 255, 255, 0.8);
        }

        .detail-icon {
            color: var(--student-teal);
            font-size: 1.1em;
        }

        .detail-text {
            font-weight: 600;
            color: #333;
            font-size: 0.9em;
        }

        .faculty-info {
            grid-column: 1 / -1;
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 12px;
            background: linear-gradient(135deg, rgba(32, 201, 151, 0.1), rgba(255, 200, 87, 0.1));
            border-radius: 10px;
            border: 1px solid var(--student-teal);
        }

        .faculty-info .detail-icon {
            font-size: 1.3em;
        }

        .faculty-info .detail-text {
            font-size: 1em;
            color: var(--royal-blue);
        }

        .no-subjects {
            background: rgba(249,250,242,0.95);
            border-radius: 20px;
            padding: 50px 40px;
            text-align: center;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
        }

        .no-subjects-icon {
            font-size: 4em;
            color: var(--royal-blue);
            margin-bottom: 20px;
        }

        .no-subjects h3 {
            color: var(--royal-blue);
            font-size: 1.8em;
            font-weight: 700;
            margin-bottom: 15px;
        }

        .no-subjects p {
            color: #666;
            font-size: 1.1em;
            line-height: 1.6;
            margin-bottom: 20px;
        }

        .no-subjects .glass-btn {
            background: linear-gradient(90deg, var(--student-teal), var(--warm-gold));
            color: white;
            padding: 12px 30px;
            border-radius: 12px;
            text-decoration: none;
            font-weight: 600;
            display: inline-block;
            transition: all 0.3s ease;
            box-shadow: 0 6px 20px var(--card-shadow);
        }

        .no-subjects .glass-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(32, 201, 151, 0.3);
            text-decoration: none;
        }

        .subjects-summary {
            background: rgba(249,250,242,0.95);
            border-radius: 20px;
            padding: 25px;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
            margin-bottom: 30px;
            text-align: center;
        }

        .summary-text {
            font-size: 1.2em;
            font-weight: 600;
            color: var(--royal-blue);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        .summary-text i {
            color: var(--student-teal);
        }

        @@media (max-width: 1200px) {
            .subjects-container {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @@media (max-width: 768px) {
            .main-container {
                padding: 0 15px;
                margin-top: 60px;
            }

            .nav-link {
                position: fixed;
                top: 10px;
                left: 10px;
                right: auto;
                width: auto;
                padding: 10px 20px;
                font-size: 0.9em;
            }

            .dashboard-header {
                padding: 30px 20px;
            }

            .dashboard-header h2 {
                font-size: 2em;
            }

            .student-info {
                font-size: 1em;
            }

            .subjects-container {
                grid-template-columns: 1fr;
                gap: 20px;
            }

            .subject-details {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <a href="@Url.Action("MainDashboard", "Student")" class="nav-link"><i class="fas fa-home"></i> Back to Dashboard</a>
    
    <div class="main-container">
        <div class="dashboard-header">
            <h2><i class="fas fa-book-open"></i> My Selected Subjects</h2>
            <div class="student-info">
                <strong>@Model.FullName</strong> | 
                Year: <strong>@Model.Year</strong> | 
                Department: <strong>@Model.Department</strong>
            </div>
        </div>

        @if (Model.Enrollments != null && Model.Enrollments.Any())
        {
            <div class="subjects-summary">
                <div class="summary-text">
                    <i class="fas fa-check-circle"></i>
                    You are currently enrolled in <strong>@Model.Enrollments.Count</strong> subject(s)
                </div>
            </div>

            <div class="subjects-container">
                @foreach (var enrollment in Model.Enrollments)
                {
                    <div class="subject-card">
                        <div class="subject-header">
                            <div class="subject-icon">📚</div>


                            <div class="subject-info">
                                <h3>@enrollment.AssignedSubject.Subject.Name</h3>
                                <div class="subject-year">@enrollment.AssignedSubject.Department</div>
                            </div>
                        </div>

                        <div class="subject-details">
                            <div class="detail-item">
                                <i class="fas fa-calendar detail-icon"></i>
                                <span class="detail-text">Year @enrollment.AssignedSubject.Year</span>
                            </div>
                            <div class="detail-item">
                                <i class="fas fa-building detail-icon"></i>
                                <span class="detail-text">@enrollment.AssignedSubject.Department</span>
                            </div>
                            <div class="detail-item" style="grid-column: 1 / -1;">
                                <i class="fas fa-clock detail-icon"></i>
                                <span class="detail-text">Enrolled: <strong>@enrollment.EnrolledAt.ToLocalTime().ToString("MMM dd, yyyy hh:mm:ss.fff tt")</strong></span>
                            </div>
                            <div class="faculty-info">
                                <i class="fas fa-chalkboard-teacher detail-icon"></i>
                                <span class="detail-text">Faculty: <strong>@enrollment.AssignedSubject.Faculty.Name</strong></span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="no-subjects">
                <div class="no-subjects-icon"><i class="fas fa-book-open"></i></div>
                <h3>No Subjects Selected Yet</h3>
                <p>You haven't enrolled in any subjects yet. Start selecting subjects to build your semester schedule.</p>
                <a href="@Url.Action("SelectSubject", "Student")" class="glass-btn">
                    <i class="fas fa-plus-circle"></i> Select Subjects Now
                </a>
            </div>
        }
    </div>
</body>
</html>
