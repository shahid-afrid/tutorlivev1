@model TutorLiveMentor.Models.StudentRegistrationModel

@{
    ViewBag.Title = "Student Registration";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Student registration for TutorLiveMentor - RGMCET" />
    <title>Student Registration - TutorLiveMentor</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700,400&display=swap" rel="stylesheet">
    <style>
        :root {
            --royal-blue: #274060;
            --warm-gold: #FFC857;
            --cream: #F9FAF2;
            --slate: #CED3DC;
            --card-shadow: rgba(39,64,96,0.13);
            --success-green: #28a745;
            --error-red: #dc3545;
            --warning-orange: #fd7e14;
        }

        body {
            min-height: 100vh;
            margin: 0;
            padding: 20px 0;
            font-family: 'Montserrat', Arial, sans-serif;
            background: linear-gradient(rgba(249, 250, 242, 0.15), rgba(255, 200, 87, 0.10)),
            url('@Url.Content("~/images/RGMCET-BACKGROUND.jpg")') center center/cover no-repeat fixed;
            position: relative;
        }

        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 0;
            display: block;
            background: linear-gradient(135deg, var(--cream) 60%, var(--warm-gold) 100%);
            opacity: 0.20;
            pointer-events: none;
        }

        .glass-card {
            background: rgba(249,250,242,0.92);
            box-shadow: 0 16px 48px var(--card-shadow);
            border-radius: 26px;
            padding: 40px;
            backdrop-filter: blur(12px);
            max-width: 500px;
            width: 90vw;
            margin: 60px auto;
            position: relative;
            z-index: 1;
            border: 2px solid var(--slate);
        }

        .logo {
            width: 60px;
            height: 60px;
            margin: 0 auto 20px auto;
            display: block;
            filter: drop-shadow(2px 6px 18px var(--royal-blue));
            object-fit: contain;
            background: var(--cream);
            border-radius: 12px;
            padding: 6px;
        }

        h2 {
            font-size: 1.8em;
            font-weight: 700;
            color: var(--royal-blue);
            text-align: center;
            margin-bottom: 30px;
            letter-spacing: 1px;
        }

        .form-group {
            margin-bottom: 20px;
            position: relative;
        }

        label {
            display: block;
            font-weight: 600;
            color: var(--royal-blue);
            margin-bottom: 8px;
            font-size: 0.95em;
        }

        .required::after {
            content: " *";
            color: var(--error-red);
        }

        input[type="text"], input[type="email"], input[type="password"], select {
            width: 100%;
            padding: 12px 16px;
            border: 2px solid var(--slate);
            border-radius: 12px;
            font-size: 1em;
            font-family: 'Montserrat', sans-serif;
            background: rgba(249,250,242,0.8);
            transition: border-color 0.3s, box-shadow 0.3s;
            box-sizing: border-box;
        }

        input[type="text"]:focus, input[type="email"]:focus, input[type="password"]:focus, select:focus {
            outline: none;
            border-color: var(--warm-gold);
            box-shadow: 0 0 0 3px rgba(255, 200, 87, 0.2);
        }

        .input-valid {
            border-color: var(--success-green) !important;
            box-shadow: 0 0 0 3px rgba(40, 167, 69, 0.2) !important;
        }

        .input-invalid {
            border-color: var(--error-red) !important;
            box-shadow: 0 0 0 3px rgba(220, 53, 69, 0.2) !important;
        }

        .password-container {
            position: relative;
            display: flex;
            align-items: center;
        }

        .password-toggle {
            position: absolute;
            right: 12px;
            background: none;
            border: none;
            cursor: pointer;
            font-size: 18px;
            z-index: 3;
            padding: 4px 8px;
            border-radius: 4px;
            transition: background-color 0.2s;
        }

        .password-toggle:hover {
            background-color: rgba(0, 0, 0, 0.05);
        }

        .password-toggle:focus {
            outline: 2px solid var(--warm-gold);
            outline-offset: 2px;
        }

        .validation-icon {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 1.2em;
            opacity: 0;
            transition: opacity 0.3s ease;
            z-index: 2;
        }

        .validation-icon.show {
            opacity: 1;
        }

        /* Special positioning for password field validation icon */
        #passwordIcon {
            right: 45px !important;
            z-index: 2;
        }

        .glass-btn {
            width: 100%;
            background: linear-gradient(90deg, var(--success-green) 74%, var(--warm-gold) 100%);
            color: #fff;
            border: none;
            border-radius: 15px;
            padding: 16px 24px;
            font-size: 1.1em;
            font-weight: 600;
            cursor: pointer;
            box-shadow: 0 8px 24px var(--card-shadow);
            border: 2px solid var(--slate);
            transition: all 0.3s ease;
            margin-top: 20px;
        }

        .glass-btn:hover:not(:disabled) {
            box-shadow: 0 16px 32px rgba(40, 167, 69, 0.3);
            background: linear-gradient(90deg, var(--warm-gold) 62%, var(--success-green) 100%);
            color: var(--royal-blue);
            transform: translateY(-3px);
            border: 2px solid var(--success-green);
        }

        .glass-btn:disabled {
            cursor: not-allowed;
            opacity: 0.7;
            transform: none;
        }

        .validation-summary-errors {
            background: rgba(220, 53, 69, 0.1);
            border: 1px solid var(--error-red);
            border-radius: 8px;
            padding: 12px;
            margin-bottom: 20px;
            color: var(--error-red);
            transition: opacity 0.5s ease;
        }

        .validation-summary-errors ul {
            margin: 10px 0 0 20px;
            padding: 0;
        }

        .field-validation-error, .real-time-error {
            color: var(--error-red);
            font-size: 0.85em;
            margin-top: 5px;
            display: block;
            font-weight: 500;
        }

        .field-validation-success {
            color: var(--success-green);
            font-size: 0.85em;
            margin-top: 5px;
            display: block;
            font-weight: 500;
        }

        .nav-link {
            position: absolute;
            top: 20px;
            left: 20px;
            background: rgba(249,250,242,0.9);
            color: var(--royal-blue);
            padding: 8px 16px;
            border-radius: 20px;
            text-decoration: none;
            font-weight: 600;
            border: 1px solid var(--slate);
            backdrop-filter: blur(8px);
            transition: all 0.3s ease;
        }

        .nav-link:hover {
            background: var(--warm-gold);
            color: var(--royal-blue);
            transform: translateY(-2px);
            text-decoration: none;
        }

        .form-progress {
            margin-bottom: 20px;
        }

        .progress-bar {
            width: 100%;
            height: 8px;
            background: var(--slate);
            border-radius: 4px;
            overflow: hidden;
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, var(--royal-blue), var(--warm-gold));
            width: 0%;
            transition: width 0.3s ease;
        }

        .progress-text {
            text-align: center;
            font-size: 0.85em;
            color: var(--royal-blue);
            margin-top: 5px;
            font-weight: 600;
        }

        @@media (max-width: 768px) {
            .glass-card {
                margin: 20px auto;
                padding: 30px 20px;
            }

            h2 {
                font-size: 1.5em;
            }

            .nav-link {
                position: static;
                margin-bottom: 20px;
                display: inline-block;
            }
        }
    </style>
</head>
<body>
    <a href="@Url.Action("Index", "Student")" class="nav-link">← Back to Student</a>
    
    <div class="glass-card">
        <img src="~/images/RGMCET.jpg" alt="RGMCET Logo" class="logo" />
        <h2>Student Registration</h2>

        <!-- Progress Indicator -->
        <div class="form-progress">
            <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                <div class="progress-fill" id="progressFill"></div>
            </div>
            <div class="progress-text" id="progressText">Complete all fields to register</div>
        </div>
        
        @using (Html.BeginForm("Register", "Student", FormMethod.Post, new { @class = "registration-form", autocomplete = "on", novalidate = "novalidate" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(false, "", new { @class = "validation-summary-errors" })

            <div class="form-group">
                <label for="FullName" class="required">Full Name</label>
                @Html.TextBoxFor(m => m.FullName, new { 
                    @required = "required", 
                    oninput = "validateFullName(this)",
                    autocomplete = "name",
                    aria_describedby = "fullNameError",
                    aria_required = "true"
                })
                <span class="validation-icon" id="fullNameIcon" role="status" aria-live="polite"></span>
                <span id="fullNameError" class="real-time-error" role="alert"></span>
                @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "field-validation-error" })
            </div>

            <div class="form-group">
                <label for="regdnum" class="required">Registration Number</label>
                @Html.TextBoxFor(m => m.RegdNumber, new { 
                    id = "regdnum", 
                    maxlength = "10", 
                    @required = "required", 
                    oninput = "validateRegdNum(this)", 
                    style = "text-transform: uppercase;",
                    autocomplete = "off",
                    aria_describedby = "regdError",
                    aria_required = "true",
                    placeholder = "e.g., 23091A32D4"
                })
                <span class="validation-icon" id="regdIcon" role="status" aria-live="polite"></span>
                <span id="regdError" class="real-time-error" role="alert"></span>
                @Html.ValidationMessageFor(m => m.RegdNumber, "", new { @class = "field-validation-error" })
            </div>

            <div class="form-group">
                <label for="Year" class="required">Year</label>
                @Html.DropDownListFor(m => m.Year, new SelectList(new[] { "II Year", "III Year", "IV Year" }), "Select Year", new { 
                    @required = "required", 
                    onchange = "validateYear(this)",
                    aria_describedby = "yearError",
                    aria_required = "true"
                })
                <span class="validation-icon" id="yearIcon" role="status" aria-live="polite"></span>
                <span id="yearError" class="real-time-error" role="alert"></span>
                @Html.ValidationMessageFor(m => m.Year, "", new { @class = "field-validation-error" })
            </div>

            <div class="form-group">
                <label for="Department" class="required">Department</label>
                @Html.DropDownListFor(m => m.Department, new SelectList(new[] {
                    "CSE","CSE(DS)","CSE(AIML)","CSE(CS)","CSE(BS)",
                    "ECE","EEE","MECH","CIVIL"
                }), "Select Department", new { 
                    @required = "required", 
                    onchange = "validateDepartment(this)",
                    aria_describedby = "deptError",
                    aria_required = "true"
                })
                <span class="validation-icon" id="deptIcon" role="status" aria-live="polite"></span>
                <span id="deptError" class="real-time-error" role="alert"></span>
                @Html.ValidationMessageFor(m => m.Department, "", new { @class = "field-validation-error" })
            </div>

            <div class="form-group">
                <label for="email" class="required">College Email (must end with @("@rgmcet.edu.in"))</label>
                @Html.TextBoxFor(m => m.Email, new { 
                    type = "email", 
                    id = "email", 
                    @required = "required", 
                    oninput = "validateEmail(this)", 
                    placeholder = "yourname@@rgmcet.edu.in",
                    autocomplete = "email",
                    aria_describedby = "emailError",
                    aria_required = "true"
                })
                <span class="validation-icon" id="emailIcon" role="status" aria-live="polite"></span>
                <span id="emailError" class="real-time-error" role="alert"></span>
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "field-validation-error" })
            </div>

            <div class="form-group">
                <label for="password" class="required">Password (8+ chars, 1 uppercase, 1 digit, 1 special character)</label>
                <div class="password-container">
                    <input type="password" id="password" name="Password" required 
                           oninput="validatePassword(this)" 
                           autocomplete="new-password"
                           aria-describedby="passwordError"
                           aria-required="true" />
                    <span class="validation-icon" id="passwordIcon" style="right: 45px;" role="status" aria-live="polite"></span>
                    <button type="button" class="password-toggle" onclick="togglePassword()" 
                            aria-label="Toggle password visibility" 
                            aria-pressed="false"
                            id="passwordToggleBtn">
                        <span id="eye" aria-hidden="true">👁️</span>
                    </button>
                </div>
                <span id="passwordError" class="real-time-error" role="alert"></span>
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "field-validation-error" })
            </div>

            <button type="submit" class="glass-btn" id="submitBtn" aria-label="Submit registration form">
                <span aria-hidden="true"></span> Register Account
            </button>
        }
    </div>

    <script type="text/javascript">
        let validationState = {
            fullName: false,
            regdNumber: false,
            year: false,
            department: false,
            email: false,
            password: false
        };

        // Prevent double submission
        let isSubmitting = false;

        function updateProgress() {
            const validCount = Object.values(validationState).filter(v => v).length;
            const progress = (validCount / 6) * 100;
            
            const progressFill = document.getElementById('progressFill');
            const progressText = document.getElementById('progressText');
            const progressBar = progressFill ? progressFill.parentElement : null;
            
            if (progressFill) progressFill.style.width = progress + '%';
            if (progressBar) progressBar.setAttribute('aria-valuenow', progress);
            
            if (progressText) {
                if (progress === 100) {
                    progressText.textContent = 'Ready to register! ✅';
                } else {
                    progressText.textContent = `${validCount}/6 fields completed`;
                }
            }
        }

        function showValidation(fieldId, isValid, message = '') {
            const field = document.getElementById(fieldId) || document.querySelector(`[name="${fieldId}"]`);
            const icon = document.getElementById(fieldId + 'Icon');
            const error = document.getElementById(fieldId + 'Error');
            
            if (field) {
                field.classList.remove('input-valid', 'input-invalid');
                field.classList.add(isValid ? 'input-valid' : 'input-invalid');
                field.setAttribute('aria-invalid', isValid ? 'false' : 'true');
            }
            
            if (icon) {
                icon.textContent = isValid ? '✅' : '❌';
                icon.classList.add('show');
            }
            
            if (error) {
                error.textContent = message;
                error.className = isValid ? 'field-validation-success' : 'real-time-error';
            }
        }

        function validateFullName(input) {
            const value = input.value.trim();
            const isValid = value.length >= 2 && /^[a-zA-Z\s.]+$/.test(value);
            const message = isValid ? 'Valid name ✓' : 'Name must be at least 2 characters and contain only letters, spaces, and dots';
            
            validationState.fullName = isValid;
            showValidation('FullName', isValid, message);
            updateProgress();
        }

        function validateRegdNum(input) {
            input.value = input.value.toUpperCase();
            
            const isValid = input.value.length === 10 && /^[A-Z0-9]+$/.test(input.value);
            const message = isValid ? 'Valid registration number ✓' : 'Registration number must be exactly 10 alphanumeric characters (uppercase)';
            
            validationState.regdNumber = isValid;
            showValidation('regdnum', isValid, message);
            updateProgress();
        }

        function validateYear(select) {
            const isValid = select.value !== '';
            const message = isValid ? 'Year selected ✓' : 'Please select your year';
            
            validationState.year = isValid;
            showValidation('Year', isValid, message);
            updateProgress();
        }

        function validateDepartment(select) {
            const isValid = select.value !== '';
            const message = isValid ? 'Department selected ✓' : 'Please select your department';
            
            validationState.department = isValid;
            showValidation('Department', isValid, message);
            updateProgress();
        }

        function validateEmail(input) {
            const emailPattern = /^[a-zA-Z0-9._%+-]+@@rgmcet\.edu\.in$/;
            const isValid = emailPattern.test(input.value);
            let message;
            
            if (!input.value) {
                message = 'Email is required';
            } else if (!input.value.includes('@@')) {
                message = 'Invalid email format';
            } else if (!input.value.endsWith('@@rgmcet.edu.in')) {
                message = 'Must use college email ending with @@rgmcet.edu.in';
            } else if (isValid) {
                message = 'Valid college email ✓';
            } else {
                message = 'Invalid email format';
            }
            
            validationState.email = isValid;
            showValidation('email', isValid, message);
            updateProgress();
        }

        function validatePassword(input) {
            const minLength = input.value.length >= 8;
            const hasUppercase = /[A-Z]/.test(input.value);
            const hasDigit = /\d/.test(input.value);
            const hasSpecial = /[^\w\s]/.test(input.value);
            
            const isValid = minLength && hasUppercase && hasDigit && hasSpecial;
            let message;
            
            if (!input.value) {
                message = 'Password is required';
            } else if (!minLength) {
                message = `Password too short (${input.value.length}/8 characters)`;
            } else if (!hasUppercase) {
                message = 'Password must contain at least 1 uppercase letter';
            } else if (!hasDigit) {
                message = 'Password must contain at least 1 digit';
            } else if (!hasSpecial) {
                message = 'Password must contain at least 1 special character';
            } else {
                message = 'Strong password ✓';
            }
            
            validationState.password = isValid;
            showValidation('password', isValid, message);
            updateProgress();
        }

        function togglePassword() {
            const pwd = document.getElementById("password");
            const eye = document.getElementById("eye");
            const toggleBtn = document.getElementById("passwordToggleBtn");
            
            if (pwd && eye && toggleBtn) {
                if (pwd.type === "password") {
                    pwd.type = "text";
                    eye.textContent = "🙈";
                    toggleBtn.setAttribute('aria-pressed', 'true');
                    toggleBtn.setAttribute('aria-label', 'Hide password');
                } else {
                    pwd.type = "password";
                    eye.textContent = "👁️";
                    toggleBtn.setAttribute('aria-pressed', 'false');
                    toggleBtn.setAttribute('aria-label', 'Show password');
                }
            }
        }

        // Initialize form validation and submit handler on page load
        document.addEventListener('DOMContentLoaded', function() {
            updateProgress();
            
            const form = document.querySelector('form.registration-form');
            const submitBtn = document.getElementById('submitBtn');
            
            if (form && submitBtn) {
                form.addEventListener('submit', function(e) {
                    if (isSubmitting) {
                        e.preventDefault();
                        return false;
                    }
                    
                    // Show loading state
                    isSubmitting = true;
                    submitBtn.disabled = true;
                    submitBtn.innerHTML = '<span aria-hidden="true">⏳</span> Registering...';
                    submitBtn.style.opacity = '0.7';
                    submitBtn.style.cursor = 'not-allowed';
                });
            }
            
            // Auto-dismiss validation summary errors after 5 seconds
            const validationSummary = document.querySelector('.validation-summary-errors');
            if (validationSummary) {
                setTimeout(() => {
                    validationSummary.style.transition = 'opacity 0.5s';
                    validationSummary.style.opacity = '0';
                    setTimeout(() => validationSummary.remove(), 500);
                }, 5000);
            }
        });
    </script>
</body>
</html>
