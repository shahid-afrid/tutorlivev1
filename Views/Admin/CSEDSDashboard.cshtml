@model TutorLiveMentor.Models.CSEDSDashboardViewModel
@{
    ViewData["Title"] = "CSEDS Department Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CSEDS Department Dashboard - TutorLiveMentor</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        :root {
            --royal-blue: #274060;
            --warm-gold: #FFC857;
            --cream: #F9FAF2;
            --slate: #CED3DC;
            --card-shadow: rgba(39,64,96,0.13);
            --success-green: #28a745;
            --error-red: #dc3545;
            --cseds-purple: #6f42c1;
            --cseds-teal: #20c997;
        }

        body {
            min-height: 100vh;
            margin: 0;
            padding: 20px 0;
            font-family: 'Montserrat', Arial, sans-serif;
            background: linear-gradient(rgba(249, 250, 242, 0.15), rgba(255, 200, 87, 0.10)),
            url('@Url.Content("~/images/RGMCET-BACKGROUND.jpg")') center center/cover no-repeat fixed;
            position: relative;
        }

        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 0;
            display: block;
            background: linear-gradient(135deg, var(--cream) 60%, var(--warm-gold) 100%);
            opacity: 0.20;
            pointer-events: none;
        }

        .main-container {
            position: relative;
            z-index: 1;
            max-width: 1600px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .dashboard-header {
            background: rgba(249,250,242,0.92);
            box-shadow: 0 8px 32px var(--card-shadow);
            border-radius: 20px;
            padding: 30px 40px;
            text-align: center;
            backdrop-filter: blur(12px);
            margin-bottom: 30px;
            border: 2px solid var(--slate);
        }

        .dashboard-header h1 {
            font-size: 2.5em;
            font-weight: 700;
            color: var(--royal-blue);
            margin: 0 0 10px 0;
            letter-spacing: 1.2px;
        }

        .dashboard-header p {
            color: #666;
            font-size: 1.2em;
            margin: 0;
        }

        /* Welcome Section */
        .welcome-section {
            background: linear-gradient(135deg, var(--cseds-purple), var(--cseds-teal));
            color: white;
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 30px;
            box-shadow: 0 8px 32px var(--card-shadow);
        }

        .welcome-section h4 {
            font-weight: 700;
            margin-bottom: 10px;
        }

        /* Statistics Cards */
        .stats-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: rgba(249,250,242,0.95);
            border-radius: 15px;
            padding: 25px;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .stat-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(135deg, var(--cseds-purple), var(--cseds-teal));
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 40px rgba(111, 66, 193, 0.3);
        }

        .stat-content {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .stat-info h6 {
            color: var(--royal-blue);
            font-weight: 600;
            margin-bottom: 5px;
            font-size: 0.9em;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .stat-count {
            font-size: 2.5em;
            font-weight: 700;
            color: var(--cseds-purple);
            margin: 0;
        }

        .stat-icon {
            font-size: 3em;
            color: var(--cseds-teal);
            opacity: 0.8;
        }

        /* Management Cards */
        .management-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 25px;
            margin-bottom: 30px;
        }

        .management-card {
            background: rgba(249,250,242,0.95);
            border-radius: 20px;
            padding: 30px;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
            text-align: center;
            transition: all 0.3s ease;
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

        .management-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 6px;
        }

        .management-card.faculty-card::before {
            background: linear-gradient(135deg, #28a745, #20c997);
        }

        .management-card.subject-card::before {
            background: linear-gradient(135deg, #ffc107, #fd7e14);
        }

        .management-card.students-card::before {
            background: linear-gradient(135deg, #9b59b6, #8e44ad);
        }

        .management-card.assignment-card::before {
            background: linear-gradient(135deg, #6f42c1, #20c997);
        }

        .management-card.report-card::before {
            background: linear-gradient(135deg, #17a2b8, #6f42c1);
        }

        .management-card.schedule-card::before {
            background: linear-gradient(135deg, #e74c3c, #c0392b);
        }

        .faculty-card .management-icon { color: #28a745; }
        .subject-card .management-icon { color: #ffc107; }
        .students-card .management-icon { color: #9b59b6; }
        .assignment-card .management-icon { color: #6f42c1; }
        .report-card .management-icon { color: #17a2b8; }
        .schedule-card .management-icon { color: #e74c3c; }

        .management-title {
            font-size: 1.4em;
            font-weight: 700;
            color: var(--royal-blue);
            margin-bottom: 10px;
        }

        .management-desc {
            color: #666;
            font-size: 1em;
            margin-bottom: 20px;
            line-height: 1.5;
        }

        .glass-btn {
            background: linear-gradient(135deg, var(--cseds-purple) 0%, var(--cseds-teal) 100%);
            color: white;
            border: none;
            border-radius: 25px;
            padding: 12px 25px;
            font-size: 1em;
            font-weight: 600;
            cursor: pointer;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            box-shadow: 0 6px 20px var(--card-shadow);
            border: 2px solid transparent;
            transition: all 0.3s ease;
        }

        .glass-btn:hover {
            background: linear-gradient(135deg, var(--cseds-teal) 0%, var(--cseds-purple) 100%);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(111, 66, 193, 0.4);
            text-decoration: none;
            color: white;
        }

        /* Faculty & Subject Overview Tables */
        .overview-section {
            background: rgba(249,250,242,0.95);
            border-radius: 20px;
            padding: 30px;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
            margin-bottom: 30px;
        }

        .overview-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
        }

        .overview-title {
            color: var(--royal-blue);
            font-weight: 700;
            font-size: 1.5em;
            margin: 0;
        }

        .overview-table {
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .overview-table thead {
            background: linear-gradient(135deg, var(--cseds-purple), var(--cseds-teal));
            color: white;
        }

        .overview-table thead th {
            font-weight: 600;
            border: none;
            padding: 15px;
        }

        .overview-table tbody td {
            padding: 15px;
            vertical-align: middle;
            border-bottom: 1px solid #f0f0f0;
        }

        .overview-table tbody tr:hover {
            background-color: rgba(111, 66, 193, 0.05);
        }

        .faculty-assignments {
            display: flex;
            flex-wrap: wrap;
            gap: 5px;
        }

        .assignment-badge {
            background: rgba(111, 66, 193, 0.1);
            color: var(--cseds-purple);
            border: 1px solid rgba(111, 66, 193, 0.2);
            border-radius: 15px;
            padding: 3px 8px;
            font-size: 0.8em;
            font-weight: 600;
        }

        .status-badge {
            padding: 5px 10px;
            border-radius: 15px;
            font-size: 0.8em;
            font-weight: 600;
        }

        .status-active { background: #d4edda; color: #155724; }
        .status-inactive { background: #f8d7da; color: #721c24; }

        .btn-sm {
            padding: 6px 12px;
            font-size: 0.8em;
            border-radius: 15px;
        }

        /* Logout Controls */
        .logout-controls {
            position: fixed;
            bottom: 20px;
            right: 20px;
            display: flex;
            flex-direction: column;
            gap: 10px;
            z-index: 100;
        }

        .logout-btn {
            background: rgba(220, 53, 69, 0.9);
            color: white;
            border: none;
            border-radius: 20px;
            padding: 10px 20px;
            font-weight: 600;
            text-decoration: none;
            backdrop-filter: blur(8px);
            transition: all 0.3s ease;
        }

        .logout-btn:hover {
            background: rgba(220, 53, 69, 1);
            transform: translateY(-2px);
            text-decoration: none;
            color: white;
        }

        /* Recent Activity */
        .activity-section {
            background: rgba(249,250,242,0.95);
            border-radius: 20px;
            padding: 30px;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
            margin-bottom: 30px;
        }

        .activity-item {
            background: rgba(111, 66, 193, 0.1);
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 10px;
            border-left: 4px solid var(--cseds-purple);
        }

        .activity-item h6 {
            color: var(--royal-blue);
            margin-bottom: 5px;
        }

        .activity-item small {
            color: #666;
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .main-container {
                padding: 0 15px;
            }

            .dashboard-header {
                padding: 25px 20px;
                margin-bottom: 25px;
            }

            .dashboard-header h1 {
                font-size: 2em;
            }

            .stats-container {
                grid-template-columns: 1fr;
                gap: 15px;
            }

            .management-container {
                grid-template-columns: 1fr;
                gap: 20px;
            }

            .stat-card, .management-card, .overview-section, .activity-section {
                padding: 20px;
            }

            .logout-controls {
                position: static;
                margin-top: 30px;
                flex-direction: row;
                justify-content: center;
            }

            .overview-table thead {
                display: none;
            }

            .overview-table tbody tr {
                display: block;
                border: 1px solid #ddd;
                border-radius: 10px;
                margin-bottom: 15px;
                padding: 15px;
            }

            .overview-table tbody td {
                display: block;
                text-align: right;
                border: none;
                padding: 8px 0;
            }

            .overview-table tbody td::before {
                content: attr(data-label) ": ";
                float: left;
                font-weight: bold;
                color: var(--royal-blue);
            }
        }
    </style>
</head>
<body>
    <div class="main-container">
        <!-- Header Section -->
        <div class="dashboard-header">
            <h1><i class="fas fa-chart-line"></i> CSE(Data Science) Department Dashboard</h1>
        </div>

        <!-- Welcome Section -->
        <div class="welcome-section">
            <h4><i class="fas fa-user-shield"></i> Welcome, CSE(Data Science) Department Administrator!</h4>
            <p class="mb-0">
                <strong>Email:</strong> @Model.AdminEmail | 
                <strong>Department:</strong> CSE(Data Science)
            </p>
        </div>

        <!-- Statistics Cards -->
        <div class="stats-container">
            <div class="stat-card">
                <div class="stat-content">
                    <div class="stat-info">
                        <h6>CSE(DS) Students</h6>
                        <h3 class="stat-count" id="csedsStudentsCount">@Model.CSEDSStudentsCount</h3>
                    </div>
                    <i class="fas fa-graduation-cap stat-icon"></i>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-content">
                    <div class="stat-info">
                        <h6>CSE(DS) Faculty</h6>
                        <h3 class="stat-count" id="csedsFacultyCount">@Model.CSEDSFacultyCount</h3>
                    </div>
                    <i class="fas fa-chalkboard-teacher stat-icon"></i>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-content">
                    <div class="stat-info">
                        <h6>Data Science Subjects</h6>
                        <h3 class="stat-count" id="csedsSubjectsCount">@Model.CSEDSSubjectsCount</h3>
                    </div>
                    <i class="fas fa-database stat-icon"></i>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-content">
                    <div class="stat-info">
                        <h6>Active Enrollments</h6>
                        <h3 class="stat-count" id="csedsEnrollmentsCount">@Model.CSEDSEnrollmentsCount</h3>
                    </div>
                    <i class="fas fa-user-check stat-icon"></i>
                </div>
            </div>
        </div>

        <!-- Management Actions -->
        <div class="management-container">
            <!-- Faculty Management -->
            <div class="management-card faculty-card" onclick="window.location.href='@Url.Action("ManageCSEDSFaculty", "Admin")'">
                <i class="fas fa-chalkboard-teacher management-icon"></i>
                <div class="management-title">Faculty Management</div>
                <div class="management-desc">Add, edit, and delete CSE(DS) faculty members. View all faculty with their assigned subjects and manage their information.</div>
                <button class="glass-btn">
                    <i class="fas fa-users"></i> Manage Faculty
                </button>
            </div>

            <!-- Subject Management -->
            <div class="management-card subject-card" onclick="window.location.href='@Url.Action("ManageCSEDSSubjects", "Admin")'">
                <i class="fas fa-database management-icon"></i>
                <div class="management-title">Subject Management</div>
                <div class="management-desc">Create new Data Science subjects with semester details. Set year, semester, and date ranges for academic planning.</div>
                <button class="glass-btn">
                    <i class="fas fa-plus"></i> Manage Subjects
                </button>
            </div>

            <!-- Student Management -->
            <div class="management-card students-card" onclick="window.location.href='@Url.Action("ManageCSEDSStudents", "Admin")'">
                <i class="fas fa-user-graduate management-icon"></i>
                <div class="management-title">Student Management</div>
                <div class="management-desc">View and manage CSE(DS) student profiles and enrollments. Add new students and update their information.</div>
                <button class="glass-btn">
                    <i class="fas fa-graduation-cap"></i> Manage Students
                </button>
            </div>

            <!-- Faculty-Subject Assignments -->
            <div class="management-card assignment-card" onclick="window.location.href='@Url.Action("ManageSubjectAssignments", "Admin")'">
                <i class="fas fa-link management-icon"></i>
                <div class="management-title">Faculty-Subject Assignments</div>
                <div class="management-desc">Assign faculty to subjects, manage existing assignments, and view all subject-faculty mappings in the department.</div>
                <button class="glass-btn">
                    <i class="fas fa-link"></i> Manage Assignments
                </button>
            </div>

            <!-- Reports & Analytics -->
            <div class="management-card report-card" onclick="window.location.href='@Url.Action("CSEDSReports", "Admin")'">
                <i class="fas fa-chart-bar management-icon"></i>
                <div class="management-title">Reports & Analytics</div>
                <div class="management-desc">Generate detailed analytics reports with filters. Export enrollment data in Excel and PDF formats for analysis.</div>
                <button class="glass-btn">
                    <i class="fas fa-download"></i> View Reports
                </button>
            </div>

            <!-- Faculty Selection Schedule -->
            <div class="management-card schedule-card" onclick="window.location.href='@Url.Action("ManageFacultySelectionSchedule", "Admin")'">
                <i class="fas fa-clock management-icon"></i>
                <div class="management-title">Faculty Selection Schedule</div>
                <div class="management-desc">Control when students can select faculty. Toggle selection on/off or set specific time periods for faculty selection windows.</div>
                <button class="glass-btn">
                    <i class="fas fa-calendar-alt"></i> Manage Schedule
                </button>
            </div>
        </div>

       
                
              

        <!-- Subject-Faculty Mappings Overview -->
        @if(Model.SubjectFacultyMappings.Any())
        {
            <div class="overview-section">
                <div class="overview-header">
                    <h3 class="overview-title">
                        <i class="fas fa-link"></i> Subject-Faculty Assignments (@Model.SubjectFacultyMappings.Count)
                    </h3>
                    <a href="@Url.Action("ManageSubjectAssignments", "Admin")" class="glass-btn">
                        <i class="fas fa-cog"></i> Manage All
                    </a>
                </div>
                
                <div class="table-responsive">
                    <table class="table overview-table" id="assignmentsOverviewTable">
                        <thead>
                            <tr>
                                <th>Subject</th>
                                <th>Year/Semester</th>
                                <th>Assigned Faculty</th>
                                <th>Enrollments</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var mapping in Model.SubjectFacultyMappings.Take(5))
                            {
                                <tr>
                                    <td data-label="Subject"><strong>@mapping.SubjectName</strong></td>
                                    <td data-label="Year/Semester">Year @mapping.Year, @mapping.Semester</td>
                                    <td data-label="Assigned Faculty">
                                        @if (mapping.AssignedFaculty.Any())
                                        {
                                            <div class="faculty-assignments">
                                                @foreach (var faculty in mapping.AssignedFaculty)
                                                {
                                                    <span class="assignment-badge">@faculty.Name</span>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No faculty assigned</span>
                                        }
                                    </td>
                                    <td data-label="Enrollments">
                                        <span class="badge bg-info">@mapping.EnrollmentCount students</span>
                                    </td>
                                    <td data-label="Status">
                                        @{
                                            bool isActive = !mapping.SemesterEndDate.HasValue || mapping.SemesterEndDate >= DateTime.Now;
                                        }
                                        <span class="status-badge @(isActive ? "status-active" : "status-inactive")">
                                            @(isActive ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                
                @if(Model.SubjectFacultyMappings.Count > 5)
                {
                    <div class="text-center mt-3">
                        <a href="@Url.Action("ManageSubjectAssignments", "Admin")" class="glass-btn">
                            <i class="fas fa-eye"></i> View All @Model.SubjectFacultyMappings.Count Assignments
                        </a>
                    </div>
                }
            </div>
        }

        


    <!-- Logout Controls -->
    <div class="logout-controls">
        <a href="@Url.Action("Profile", "Admin")" class="logout-btn">
            <i class="fas fa-user"></i> Profile
        </a>
        <a href="@Url.Action("Logout", "Admin")" class="logout-btn">
            <i class="fas fa-sign-out-alt"></i> Logout
        </a>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function() {
            // Initialize DataTables for overview tables
            $('#facultyOverviewTable').DataTable({
                responsive: true,
                pageLength: 5,
                searching: false,
                info: false,
                paging: false,
                order: [[0, 'asc']]
            });

            $('#assignmentsOverviewTable').DataTable({
                responsive: true,
                pageLength: 5,
                searching: false,
                info: false,
                paging: false,
                order: [[0, 'asc']]
            });
        });

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Enhanced CSEDS Dashboard loaded successfully');
            
            // You could add auto-refresh functionality here
            // setInterval(updateDashboardStats, 30000); // Refresh every 30 seconds
        });

        // Function to update dashboard statistics (optional)
        async function updateDashboardStats() {
            try {
                const response = await fetch('@Url.Action("CSEDSSystemInfo", "Admin")');
                const data = await response.json();
                
                if (data.DatabaseStats) {
                    document.getElementById('csedsStudentsCount').textContent = data.DatabaseStats.StudentsCount;
                    document.getElementById('csedsFacultyCount').textContent = data.DatabaseStats.FacultiesCount;
                    document.getElementById('csedsSubjectsCount').textContent = data.DatabaseStats.SubjectsCount;
                    document.getElementById('csedsEnrollmentsCount').textContent = data.DatabaseStats.EnrollmentsCount;
                }
            } catch (error) {
                console.error('Error updating dashboard stats:', error);
            }
        }
    </script>
</body>
</html>