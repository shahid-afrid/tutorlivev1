@model TutorLiveMentor.Models.AdminProfileViewModel
@{
    ViewData["Title"] = "CSEDS Admin Profile";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CSEDS Admin Profile - TutorLiveMentor</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        :root {
            --royal-blue: #274060;
            --warm-gold: #FFC857;
            --cream: #F9FAF2;
            --slate: #CED3DC;
            --card-shadow: rgba(39,64,96,0.13);
            --success-green: #28a745;
            --error-red: #dc3545;
            --cseds-purple: #6f42c1;
            --cseds-teal: #20c997;
        }

        body {
            min-height: 100vh;
            margin: 0;
            padding: 20px 0;
            font-family: 'Montserrat', Arial, sans-serif;
            background: linear-gradient(rgba(249, 250, 242, 0.15), rgba(255, 200, 87, 0.10)),
            url('@Url.Content("~/images/RGMCET-BACKGROUND.jpg")') center center/cover no-repeat fixed;
            position: relative;
        }

        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 0;
            display: block;
            background: linear-gradient(135deg, var(--cream) 60%, var(--warm-gold) 100%);
            opacity: 0.20;
            pointer-events: none;
        }

        .main-container {
            position: relative;
            z-index: 1;
            max-width: 1000px;
            margin: 0 auto;
            padding: 0 20px 40px 20px;
        }

        .profile-header {
            background: rgba(249,250,242,0.92);
            box-shadow: 0 8px 32px var(--card-shadow);
            border-radius: 20px;
            padding: 30px 40px;
            text-align: center;
            backdrop-filter: blur(12px);
            margin-bottom: 30px;
            border: 2px solid var(--slate);
        }

        .profile-header h1 {
            font-size: 2.5em;
            font-weight: 700;
            color: var(--royal-blue);
            margin: 0 0 10px 0;
            letter-spacing: 1.2px;
        }

        .profile-header p {
            color: #666;
            font-size: 1.2em;
            margin: 0;
        }

        .profile-content {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 30px;
        }

        .profile-card {
            background: rgba(249,250,242,0.95);
            border-radius: 20px;
            padding: 30px;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
            position: relative;
            overflow: hidden;
        }

        .profile-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 6px;
            background: linear-gradient(135deg, var(--cseds-purple), var(--cseds-teal));
        }

        .card-title {
            color: var(--royal-blue);
            font-weight: 700;
            font-size: 1.5em;
            margin-bottom: 25px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            font-weight: 600;
            color: var(--royal-blue);
            margin-bottom: 8px;
            display: block;
        }

        .form-control {
            border: 2px solid var(--slate);
            border-radius: 12px;
            padding: 12px 15px;
            font-size: 1em;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: var(--cseds-purple);
            box-shadow: 0 0 0 0.2rem rgba(111, 66, 193, 0.25);
            outline: none;
        }

        .form-control:read-only {
            background-color: #f8f9fa;
            cursor: not-allowed;
        }

        .glass-btn {
            background: linear-gradient(135deg, var(--cseds-purple) 0%, var(--cseds-teal) 100%);
            color: white;
            border: none;
            border-radius: 25px;
            padding: 12px 25px;
            font-size: 1em;
            font-weight: 600;
            cursor: pointer;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            box-shadow: 0 6px 20px var(--card-shadow);
            border: 2px solid transparent;
            transition: all 0.3s ease;
            width: 100%;
            justify-content: center;
        }

        .glass-btn:hover {
            background: linear-gradient(135deg, var(--cseds-teal) 0%, var(--cseds-purple) 100%);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(111, 66, 193, 0.4);
            text-decoration: none;
            color: white;
        }

        .glass-btn:active {
            transform: translateY(0);
        }

        .back-btn {
            background: rgba(220, 53, 69, 0.9);
            color: white;
            border: none;
            border-radius: 20px;
            padding: 10px 20px;
            font-weight: 600;
            text-decoration: none;
            backdrop-filter: blur(8px);
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 20px;
        }

        .back-btn:hover {
            background: rgba(220, 53, 69, 1);
            transform: translateY(-2px);
            text-decoration: none;
            color: white;
        }

        .info-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 0;
            border-bottom: 1px solid rgba(111, 66, 193, 0.1);
        }

        .info-item:last-child {
            border-bottom: none;
            padding-bottom: 0;
        }

        .info-label {
            font-weight: 600;
            color: var(--royal-blue);
        }

        .info-value {
            color: #666;
            font-weight: 500;
        }

        .department-badge {
            background: linear-gradient(135deg, var(--cseds-purple), var(--cseds-teal));
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.9em;
        }

        .alert {
            border-radius: 15px;
            border: none;
            padding: 15px 20px;
            margin-bottom: 20px;
            animation: slideIn 0.3s ease;
        }

        @@keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .alert-success {
            background: rgba(40, 167, 69, 0.1);
            color: #155724;
            border-left: 4px solid #28a745;
        }

        .alert-danger {
            background: rgba(220, 53, 69, 0.1);
            color: #721c24;
            border-left: 4px solid #dc3545;
        }

        .modal-content {
            border-radius: 20px;
            border: none;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
        }

        .modal-header {
            background: linear-gradient(135deg, var(--cseds-purple), var(--cseds-teal));
            color: white;
            border-radius: 20px 20px 0 0;
            border-bottom: none;
            padding: 20px 30px;
        }

        .modal-body {
            padding: 30px;
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .profile-content {
                grid-template-columns: 1fr;
                gap: 20px;
            }

            .profile-header {
                padding: 25px 20px;
            }

            .profile-header h1 {
                font-size: 2em;
            }

            .profile-card {
                padding: 20px;
            }

            .modal-body {
                padding: 20px;
            }
        }
    </style>
</head>
<body>
    <div class="main-container">
        <!-- Back Button -->
        <a href="@Url.Action("CSEDSDashboard", "Admin")" class="back-btn">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>

        <!-- Header Section -->
        <div class="profile-header">
            <h1><i class="fas fa-user-shield"></i> CSEDS Admin Profile</h1>
            <p>Computer Science & Engineering - Data Science Department Administration</p>
        </div>

        <!-- Success/Error Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
            </div>
        }

        <div class="profile-content">
            <!-- Profile Information -->
            <div class="profile-card">
                <h3 class="card-title">
                    <i class="fas fa-user"></i> Profile Information
                </h3>

                @using (Html.BeginForm("UpdateProfile", "Admin", FormMethod.Post))
                {
                    @Html.HiddenFor(m => m.AdminId)
                    
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type = "email", @required = "required" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Department, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Department, new { @class = "form-control", @readonly = "readonly" })
                        <small class="text-muted">Department cannot be changed</small>
                    </div>

                    <button type="submit" class="glass-btn">
                        <i class="fas fa-save"></i> Update Profile
                    </button>
                }
            </div>

            <!-- Additional Information -->
            <div class="profile-card">
                <h3 class="card-title">
                    <i class="fas fa-info-circle"></i> Account Details
                </h3>

                <div class="info-item">
                    <span class="info-label">Admin ID:</span>
                    <span class="info-value">#@Model.AdminId</span>
                </div>

                <div class="info-item">
                    <span class="info-label">Department:</span>
                    <span class="department-badge">@Model.Department</span>
                </div>

                <div class="info-item">
                    <span class="info-label">Account Created:</span>
                    <span class="info-value">@Model.CreatedDate.ToString("MMM dd, yyyy")</span>
                </div>

                @if (Model.LastLogin.HasValue)
                {
                    <div class="info-item">
                        <span class="info-label">Last Login:</span>
                        <span class="info-value">@Model.LastLogin.Value.ToString("MMM dd, yyyy hh:mm tt")</span>
                    </div>
                }

                <div style="margin-top: 25px;">
                    <button type="button" class="glass-btn" onclick="openChangePasswordModal()">
                        <i class="fas fa-lock"></i> Change Password
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Change Password Modal -->
    <div class="modal fade" id="changePasswordModal" tabindex="-1" aria-labelledby="changePasswordModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="changePasswordModalLabel">
                        <i class="fas fa-lock"></i> Change Password
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="changePasswordForm">
                        <input type="hidden" id="adminId" value="@Model.AdminId" />
                        <input type="hidden" id="adminEmail" value="@Model.Email" />

                        <div class="form-group">
                            <label for="currentPassword" class="form-label">Current Password</label>
                            <input type="password" id="currentPassword" name="CurrentPassword" class="form-control" required />
                            <div class="invalid-feedback"></div>
                        </div>

                        <div class="form-group">
                            <label for="newPassword" class="form-label">New Password</label>
                            <input type="password" id="newPassword" name="NewPassword" class="form-control" minlength="6" required />
                            <div class="invalid-feedback"></div>
                            <small class="text-muted">Password must be at least 6 characters long</small>
                        </div>

                        <div class="form-group">
                            <label for="confirmPassword" class="form-label">Confirm New Password</label>
                            <input type="password" id="confirmPassword" name="ConfirmPassword" class="form-control" required />
                            <div class="invalid-feedback"></div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="glass-btn">
                                <i class="fas fa-save"></i> Change Password
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

    <script>
        function openChangePasswordModal() {
            new bootstrap.Modal(document.getElementById('changePasswordModal')).show();
        }

        // Change Password Form Submission
        document.getElementById('changePasswordForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            // Clear previous validation
            document.querySelectorAll('.is-invalid').forEach(el => el.classList.remove('is-invalid'));
            document.querySelectorAll('.invalid-feedback').forEach(el => el.textContent = '');

            const currentPassword = document.getElementById('currentPassword').value;
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;

            // Client-side validation
            let isValid = true;

            if (!currentPassword) {
                showFieldError('currentPassword', 'Current password is required');
                isValid = false;
            }

            if (!newPassword) {
                showFieldError('newPassword', 'New password is required');
                isValid = false;
            } else if (newPassword.length < 6) {
                showFieldError('newPassword', 'Password must be at least 6 characters long');
                isValid = false;
            }

            if (!confirmPassword) {
                showFieldError('confirmPassword', 'Please confirm your new password');
                isValid = false;
            } else if (newPassword !== confirmPassword) {
                showFieldError('confirmPassword', 'New password and confirmation password do not match');
                isValid = false;
            }

            if (!isValid) return;

            const formData = {
                AdminId: parseInt(document.getElementById('adminId').value),
                AdminEmail: document.getElementById('adminEmail').value,
                CurrentPassword: currentPassword,
                NewPassword: newPassword,
                ConfirmPassword: confirmPassword
            };

            try {
                const response = await fetch('@Url.Action("ChangeAdminPassword", "Admin")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData)
                });

                const result = await response.json();
                
                if (result.success) {
                    bootstrap.Modal.getInstance(document.getElementById('changePasswordModal')).hide();
                    showAlert(result.message, 'success');
                    document.getElementById('changePasswordForm').reset();
                } else {
                    showAlert(result.message, 'danger');
                }
            } catch (error) {
                console.error('Error:', error);
                showAlert('Error changing password. Please try again.', 'danger');
            }
        });

        function showFieldError(fieldId, message) {
            const field = document.getElementById(fieldId);
            const feedback = field.nextElementSibling;
            
            field.classList.add('is-invalid');
            if (feedback && feedback.classList.contains('invalid-feedback')) {
                feedback.textContent = message;
            }
        }

        function showAlert(message, type) {
            // Remove existing alerts
            document.querySelectorAll('.alert').forEach(alert => {
                if (!alert.closest('.main-container')) return;
                alert.remove();
            });

            const alertHtml = `
                <div class="alert alert-${type}" role="alert">
                    <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-triangle'}"></i> ${message}
                </div>
            `;

            const container = document.querySelector('.main-container');
            const header = container.querySelector('.profile-header');
            header.insertAdjacentHTML('afterend', alertHtml);

            // Auto-remove after 5 seconds
            setTimeout(() => {
                const alert = container.querySelector('.alert');
                if (alert) alert.remove();
            }, 5000);
        }

        // Password confirmation validation
        document.getElementById('confirmPassword').addEventListener('input', function() {
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = this.value;
            
            if (confirmPassword && newPassword !== confirmPassword) {
                this.classList.add('is-invalid');
                this.nextElementSibling.textContent = 'Passwords do not match';
            } else {
                this.classList.remove('is-invalid');
                this.nextElementSibling.textContent = '';
            }
        });

        // Clear modal form when hidden
        document.getElementById('changePasswordModal').addEventListener('hidden.bs.modal', function() {
            document.getElementById('changePasswordForm').reset();
            document.querySelectorAll('.is-invalid').forEach(el => el.classList.remove('is-invalid'));
            document.querySelectorAll('.invalid-feedback').forEach(el => el.textContent = '');
        });
    </script>
</body>
</html>